---
/**
 * About Page Component - GENERATIVA
 *
 * Full about page with:
 * - Hero section with story intro
 * - Company story (narrative style)
 * - Mission statement
 * - Approach cards (3 principles)
 * - Why us section (4 differentiators)
 * - Stats section
 * - CTA
 *
 * Design: Modern, clean, alternating light/dark sections
 * Tone: Human, empathetic, confident but not arrogant
 */

import { getTranslations, type Locale, buildLocalePath } from '@i18n/index';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
const about = t.about;
---

<!-- Hero Section (Elevated gradient + decorative elements) -->
<section class="relative overflow-hidden bg-gradient-to-b from-slate-50/50 via-white to-white pt-24 pb-12 md:pt-32 md:pb-20 lg:pt-40 lg:pb-28">

  <!-- Decorative elements -->
  <div class="absolute inset-0 bg-dots opacity-[0.18]"></div>
  <div class="absolute top-12 right-[10%] w-72 h-72 md:w-96 md:h-96 bg-amber-200/25 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-4 left-[8%] w-56 h-56 md:w-72 md:h-72 bg-primary-200/20 rounded-full blur-3xl pointer-events-none"></div>

  <!-- Geometric accent — people / team (about theme) -->
  <div class="absolute top-28 left-[6%] hidden lg:block pointer-events-none opacity-[0.12]">
    <svg width="120" height="110" viewBox="0 0 120 110" fill="none">
      <circle cx="38" cy="28" r="12" stroke="#1E293B" stroke-width="1.5" />
      <circle cx="38" cy="24" r="4" fill="#1E293B" opacity="0.2" />
      <path d="M18 72 C18 54, 58 54, 58 72" stroke="#1E293B" stroke-width="1.5" fill="none" />
      <circle cx="82" cy="32" r="10" stroke="#F59E0B" stroke-width="1.5" />
      <circle cx="82" cy="28" r="3.5" fill="#F59E0B" opacity="0.2" />
      <path d="M66 72 C66 57, 98 57, 98 72" stroke="#F59E0B" stroke-width="1.5" fill="none" />
      <line x1="50" y1="30" x2="72" y2="32" stroke="#1E293B" stroke-width="1" stroke-dasharray="3 3" opacity="0.5" />
    </svg>
  </div>
  <div class="absolute bottom-24 right-[5%] hidden lg:block pointer-events-none opacity-[0.12]">
    <svg width="100" height="100" viewBox="0 0 100 100" fill="none">
      <path d="M10 70 L50 18 L90 70" stroke="#1E293B" stroke-width="1.5" fill="none" stroke-dasharray="6 4" />
      <circle cx="50" cy="18" r="6" stroke="#F59E0B" stroke-width="1.5" />
      <circle cx="50" cy="18" r="2" fill="#F59E0B" opacity="0.3" />
      <circle cx="10" cy="70" r="4" stroke="#1E293B" stroke-width="1.5" />
      <circle cx="90" cy="70" r="4" stroke="#1E293B" stroke-width="1.5" />
    </svg>
  </div>
  <!-- Extra: lightbulb / innovation hint (right mid, tablet+) -->
  <div class="absolute top-[45%] right-[3%] hidden md:block lg:hidden pointer-events-none opacity-[0.10]">
    <svg width="40" height="55" viewBox="0 0 40 55" fill="none">
      <circle cx="20" cy="18" r="12" stroke="#F59E0B" stroke-width="1.5" />
      <path d="M15 30 L15 38 L25 38 L25 30" stroke="#F59E0B" stroke-width="1.5" fill="none" />
      <line x1="15" y1="42" x2="25" y2="42" stroke="#F59E0B" stroke-width="1.5" stroke-linecap="round" />
      <path d="M16 10 L20 6 L24 10" stroke="#F59E0B" stroke-width="1" fill="none" opacity="0.5" />
    </svg>
  </div>
  <!-- Extra: strong team / unity symbol (left bottom) -->
  <div class="absolute bottom-[8%] left-[3%] hidden md:block pointer-events-none opacity-[0.10]">
    <svg width="70" height="50" viewBox="0 0 70 50" fill="none">
      <!-- Three people silhouettes standing together -->
      <!-- Left person -->
      <circle cx="18" cy="12" r="5" stroke="#1E293B" stroke-width="1.3" />
      <circle cx="18" cy="10" r="1.5" fill="#1E293B" opacity="0.2" />
      <path d="M8 34 C8 22, 28 22, 28 34" stroke="#1E293B" stroke-width="1.3" fill="none" />
      <!-- Center person (slightly raised — leader) -->
      <circle cx="35" cy="8" r="6" stroke="#F59E0B" stroke-width="1.5" />
      <circle cx="35" cy="6" r="2" fill="#F59E0B" opacity="0.2" />
      <path d="M23 32 C23 18, 47 18, 47 32" stroke="#F59E0B" stroke-width="1.5" fill="none" />
      <!-- Right person -->
      <circle cx="52" cy="12" r="5" stroke="#1E293B" stroke-width="1.3" />
      <circle cx="52" cy="10" r="1.5" fill="#1E293B" opacity="0.2" />
      <path d="M42 34 C42 22, 62 22, 62 34" stroke="#1E293B" stroke-width="1.3" fill="none" />
      <!-- Connecting base line (unity) -->
      <path d="M8 38 L62 38" stroke="#1E293B" stroke-width="1" stroke-dasharray="4 3" opacity="0.4" />
      <!-- Small star/sparkle above center -->
      <path d="M35 0 L36 2.5 L38.5 3.5 L36 4.5 L35 7 L34 4.5 L31.5 3.5 L34 2.5 Z" fill="#F59E0B" opacity="0.3" />
    </svg>
  </div>

  <div class="container-lg relative">
    <div class="max-w-3xl mx-auto text-center px-4 md:px-0">
      <!-- Eyebrow -->
      <div class="inline-flex items-center gap-2 px-3 py-1.5 md:px-4 md:py-2 bg-amber-50 border border-amber-200/60 text-amber-700 rounded-full text-xs md:text-sm font-medium mb-4 md:mb-6 animate-fade-in">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-amber-500"></span>
        </span>
        {about.hero.eyebrow}
      </div>

      <!-- Title -->
      <h1 class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-neutral-750 mb-4 md:mb-6 leading-tight animate-slide-up">
        {about.hero.title}
      </h1>

      <!-- Subtitle -->
      <p class="text-base md:text-lg lg:text-xl text-neutral-600 leading-relaxed max-w-2xl mx-auto animate-slide-up" style="animation-delay: 100ms;">
        {about.hero.subtitle}
      </p>
    </div>
  </div>

  <!-- Bottom fade -->
  <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-white to-transparent"></div>
</section>

<!-- Story Section -->
<section class="py-12 md:py-20 lg:py-28 bg-white">
  <div class="container-lg">
    <div class="max-w-3xl mx-auto px-4 md:px-0">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-neutral-750 mb-6 md:mb-10 text-center">
        {about.story.title}
      </h2>

      <div class="space-y-4 md:space-y-6">
        {about.story.paragraphs.map((paragraph: string, index: number) => (
          <p
            class={`text-base md:text-lg leading-relaxed ${index === 0 ? 'md:text-xl text-neutral-800 font-medium' : 'text-neutral-600'}`}
          >
            {paragraph}
          </p>
        ))}
      </div>
    </div>
  </div>
</section>

<!-- Mission Section - Dark -->
<section class="py-12 md:py-20 lg:py-28 bg-gradient-dark relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-1/4 w-72 h-72 bg-accent-500/10 rounded-full blur-3xl"></div>

  <div class="container-lg relative">
    <div class="max-w-3xl mx-auto text-center px-4 md:px-0">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 md:mb-8 text-white">
        {about.mission.title}
      </h2>
      <p class="text-base md:text-xl lg:text-2xl text-slate-300 leading-relaxed">
        {about.mission.content}
      </p>
    </div>
  </div>
</section>

<!-- Approach Section -->
<section class="py-12 md:py-20 lg:py-28 bg-neutral-50">
  <div class="container-lg">
    <!-- Header -->
    <div class="text-center mb-8 md:mb-16">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-neutral-750 mb-3 md:mb-4">
        {about.approach.title}
      </h2>
      <p class="text-base md:text-lg text-neutral-600 max-w-2xl mx-auto">
        {about.approach.subtitle}
      </p>
    </div>

    <!-- Dynamic swipe indicator (mobile only) -->
    <div class="flex md:hidden items-center justify-center gap-2 text-xs text-neutral-400 mb-3" data-scroll-hint>
      <svg class="w-4 h-4 transition-opacity duration-300 opacity-0" data-arrow-left fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
      <span data-hint-text>{locale === 'ro' ? 'Glisează pentru mai multe' : 'Swipe for more'}</span>
      <svg class="w-4 h-4 animate-pulse transition-opacity duration-300" data-arrow-right fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </div>

    <!-- Cards - horizontal scroll on mobile -->
    <div class="flex md:grid md:grid-cols-3 gap-4 md:gap-6 lg:gap-8 overflow-x-auto md:overflow-visible pb-4 md:pb-0 snap-x snap-mandatory scrollbar-hide -mx-4 px-4 md:mx-0 md:px-0" data-scroll-container>
      {about.approach.items.map((item: { icon: string; title: string; description: string }) => (
        <div class="group flex-shrink-0 w-[85vw] sm:w-[70vw] md:w-auto bg-white p-5 md:p-6 lg:p-8 shadow-sm border border-neutral-100 hover:shadow-lg hover:border-primary-200/50 transition-all duration-300 snap-center" style="border-radius: 16px;">
          <!-- Icon -->
          <div class="w-11 h-11 md:w-14 md:h-14 rounded-xl bg-neutral-100 flex items-center justify-center mb-4 md:mb-6 transition-all duration-300">
            {item.icon === 'human' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            )}
            {item.icon === 'integration' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
              </svg>
            )}
            {item.icon === 'results' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            )}
          </div>

          <!-- Content -->
          <h3 class="text-lg md:text-xl font-bold text-neutral-750 mb-2 md:mb-3">
            {item.title}
          </h3>
          <p class="text-sm md:text-base text-neutral-600 leading-relaxed">
            {item.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Why Us Section -->
<section class="py-12 md:py-20 lg:py-28 bg-white">
  <div class="container-lg">
    <!-- Header -->
    <div class="text-center mb-8 md:mb-16">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-neutral-750 mb-3 md:mb-4">
        {about.whyUs.title}
      </h2>
      <p class="text-base md:text-lg text-neutral-600 max-w-2xl mx-auto">
        {about.whyUs.subtitle}
      </p>
    </div>

    <!-- Dynamic swipe indicator (mobile only) -->
    <div class="flex md:hidden items-center justify-center gap-2 text-xs text-neutral-400 mb-3" data-scroll-hint>
      <svg class="w-4 h-4 transition-opacity duration-300 opacity-0" data-arrow-left fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
      <span data-hint-text>{locale === 'ro' ? 'Glisează pentru mai multe' : 'Swipe for more'}</span>
      <svg class="w-4 h-4 animate-pulse transition-opacity duration-300" data-arrow-right fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </div>

    <!-- Horizontal scroll on mobile, grid on tablet+ -->
    <div class="flex md:grid md:grid-cols-2 gap-4 md:gap-6 lg:gap-8 mx-auto overflow-x-auto md:overflow-visible pb-4 md:pb-0 snap-x snap-mandatory scrollbar-hide -mx-4 px-4 md:mx-0 md:px-0" data-scroll-container>
      {about.whyUs.items.map((item: { title: string; description: string }, index: number) => (
        <div class="flex-shrink-0 w-[85vw] sm:w-[70vw] md:w-auto min-w-0 flex gap-3 md:gap-4 bg-neutral-50 p-4 md:p-5 lg:p-6 rounded-xl snap-center">
          <!-- Number badge -->
          <div class="flex-shrink-0 w-8 h-8 md:w-10 md:h-10 rounded-full bg-gradient-to-br from-primary-400 to-accent-500 flex items-center justify-center text-white font-bold text-xs md:text-sm">
            {index + 1}
          </div>

          <!-- Content -->
          <div>
            <h3 class="text-base md:text-lg font-bold text-neutral-750 mb-1 md:mb-2">
              {item.title}
            </h3>
            <p class="text-sm md:text-base text-neutral-600 leading-relaxed">
              {item.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Guarantee Section - Light -->
<section class="py-12 md:py-20 lg:py-24 bg-neutral-50">
  <div class="container-lg">
    <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-center mb-8 md:mb-16 text-neutral-750">
      {about.guarantee.title}
    </h2>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
      {about.guarantee.items.map((item: { value: string; unit: string; label: string; icon: string }) => (
        <div class="text-center bg-white border border-neutral-100 rounded-2xl p-5 md:p-6 shadow-sm hover:shadow-md transition-shadow duration-300">
          <!-- Icon -->
          <div class="w-10 h-10 mx-auto mb-3 rounded-full bg-accent-100 flex items-center justify-center">
            {item.icon === 'calendar' && (
              <svg class="w-5 h-5 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            )}
            {item.icon === 'bolt' && (
              <svg class="w-5 h-5 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            )}
            {item.icon === 'shield' && (
              <svg class="w-5 h-5 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            )}
            {item.icon === 'clock' && (
              <svg class="w-5 h-5 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            )}
          </div>

          <!-- Value + Unit -->
          <div class="text-3xl md:text-4xl lg:text-5xl font-bold text-neutral-750 mb-1">
            {item.value}<span class="text-lg md:text-xl lg:text-2xl text-accent-600 font-semibold ml-0.5">{item.unit}</span>
          </div>

          <!-- Label -->
          <div class="text-neutral-500 text-xs md:text-sm leading-relaxed mt-2">
            {item.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- CTA Section — Stripe-style dark gradient -->
<section class="relative py-16 md:py-24 lg:py-28 overflow-hidden">
  <!-- Dark gradient background -->
  <div class="absolute inset-0 bg-gradient-dark"></div>

  <!-- Dot pattern overlay -->
  <div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(rgba(148, 163, 184, 0.12) 1px, transparent 1px); background-size: 32px 32px;"></div>

  <!-- Decorative orbs -->
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-accent-500/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-1/4 w-72 h-72 bg-primary-500/5 rounded-full blur-3xl"></div>

  <!-- Content -->
  <div class="container-md relative z-10 text-center">
    <!-- Eyebrow badge -->
    <span class="inline-block px-4 py-1.5 bg-white/5 text-accent-300 rounded-full text-sm font-medium mb-6 border border-white/10">
      ✨ {about.cta.eyebrow}
    </span>

    <h2 class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-white mb-6 leading-tight">
      {about.cta.title}
    </h2>

    <p class="text-lg md:text-xl text-slate-400 mb-10 max-w-2xl mx-auto leading-relaxed">
      {about.cta.subtitle}
    </p>

    <!-- CTA Button with glow -->
    <div class="flex items-center justify-center">
      <a
        href={buildLocalePath('/demo/', locale) + '?source=about'}
        class="group relative inline-flex items-center gap-2.5 px-8 py-4 font-semibold text-white text-lg
               bg-accent-500 hover:bg-accent-600
               shadow-soft
               transition-all duration-300 hover:-translate-y-0.5"
        style="border-radius: 16px;"
      >
        {about.cta.button}
        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
        <!-- Glow effect behind button -->
        <div class="absolute inset-0 bg-accent-500 blur-xl opacity-40 group-hover:opacity-60 transition-opacity -z-10" style="border-radius: 16px;"></div>
      </a>
    </div>

    <!-- Pilot offer card -->
    <div class="mt-8 inline-flex items-center gap-3 px-5 py-3 bg-white/5 border border-white/10 rounded-2xl">
      <span class="flex-shrink-0 w-8 h-8 bg-accent-500/20 rounded-full flex items-center justify-center">
        <svg class="w-4 h-4 text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </span>
      <div class="text-left">
        <p class="text-sm font-semibold text-white">
          {locale === 'ro' ? 'Pilot gratuit 14 zile' : '14-day free pilot'}
        </p>
        <p class="text-xs text-slate-400">
          {locale === 'ro' ? 'Configurăm asistentul pentru afacerea ta. Fără plată, fără card.' : 'We configure the assistant for your business. No payment, no card.'}
        </p>
      </div>
    </div>

    <!-- Trust indicators -->
    <div class="mt-6 flex flex-wrap items-center justify-center gap-6 text-sm text-slate-500">
      <span class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        {locale === 'ro' ? 'Fără obligații' : 'No obligations'}
      </span>
      <span class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        {locale === 'ro' ? '30 minute' : '30 minutes'}
      </span>
      <span class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        {locale === 'ro' ? 'Răspuns în 24h' : 'Response within 24h'}
      </span>
    </div>
  </div>
</section>

<style>
  .bg-grid {
    background-image: radial-gradient(circle, #e5e7eb 1px, transparent 1px);
    background-size: 24px 24px;
  }

  .bg-grid-dark {
    background-image: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
    background-size: 24px 24px;
  }

  /* Hide scrollbar but keep functionality */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  (function() {
    function initScrollHints() {
      const sections = document.querySelectorAll('[data-scroll-hint]');
      sections.forEach((hint) => {
        const container = hint.parentElement?.querySelector('[data-scroll-container]') as HTMLElement | null;
        if (!container) return;

        const arrowLeft = hint.querySelector('[data-arrow-left]') as HTMLElement;
        const arrowRight = hint.querySelector('[data-arrow-right]') as HTMLElement;

        function updateArrows() {
          if (!container || !arrowLeft || !arrowRight) return;
          const { scrollLeft, scrollWidth, clientWidth } = container;
          const threshold = 10;
          const atStart = scrollLeft <= threshold;
          const atEnd = scrollLeft + clientWidth >= scrollWidth - threshold;

          arrowLeft.style.opacity = atStart ? '0' : '1';
          arrowLeft.classList.toggle('animate-pulse', !atStart);
          arrowRight.style.opacity = atEnd ? '0' : '1';
          arrowRight.classList.toggle('animate-pulse', !atEnd);
        }

        container.addEventListener('scroll', updateArrows, { passive: true });
        updateArrows();
        window.addEventListener('load', updateArrows);
      });
    }

    document.addEventListener('DOMContentLoaded', initScrollHints);
    document.addEventListener('astro:page-load', initScrollHints);
  })();
