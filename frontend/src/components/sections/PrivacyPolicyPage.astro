---
/**
 * Privacy Policy Page Component
 *
 * Displays Privacy Policy + Cookie Policy content
 * Content from i18n translations (ro.json / en.json)
 */

import { getTranslations, type Locale } from '@i18n/index';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
const privacy = t.privacy;
---

<article class="py-12 md:py-20 lg:py-28">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Page Header -->
    <header class="mb-10 md:mb-14">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm text-neutral-500 mb-6" aria-label="Breadcrumb">
        <a href={`/${locale}/`} class="hover:text-primary-500 transition-colors">
          {privacy.breadcrumb.home}
        </a>
        <svg class="w-4 h-4 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-neutral-700 font-medium">{privacy.breadcrumb.current}</span>
      </nav>

      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-neutral-750 mb-3">
        {privacy.title}
      </h1>
      <p class="text-neutral-500 text-sm">
        {privacy.lastUpdated}
      </p>
    </header>

    <!-- Privacy Policy Sections -->
    <div class="legal-content space-y-8 md:space-y-10">
      {privacy.sections.map((section: any) => (
        <section>
          <h2 class="text-xl md:text-2xl font-bold text-neutral-750 mb-4">
            {section.title}
          </h2>
          {section.content && (
            <div class="text-neutral-600 leading-relaxed whitespace-pre-line mb-4">
              {section.content}
            </div>
          )}
          {section.items && (
            <ul class="list-disc list-outside ml-5 space-y-2 text-neutral-600 leading-relaxed mb-4">
              {section.items.map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>
          )}
          {section.extra && (
            <p class="text-neutral-600 leading-relaxed italic">
              {section.extra}
            </p>
          )}
        </section>
      ))}
    </div>

    <!-- Divider -->
    <hr class="my-12 md:my-16 border-neutral-200" />

    <!-- Cookie Policy -->
    <div class="space-y-8 md:space-y-10">
      <h2 class="text-2xl md:text-3xl font-bold text-neutral-750 mb-6">
        {privacy.cookiePolicy.title}
      </h2>

      {privacy.cookiePolicy.sections.map((section: any) => (
        <section>
          <h3 class="text-lg md:text-xl font-semibold text-neutral-900 mb-3">
            {section.title}
          </h3>
          {section.content && (
            <div class="text-neutral-600 leading-relaxed whitespace-pre-line mb-4">
              {section.content}
            </div>
          )}
          {section.items && (
            <ul class="list-disc list-outside ml-5 space-y-2 text-neutral-600 leading-relaxed">
              {section.items.map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>
          )}
        </section>
      ))}
    </div>
  </div>
</article>

<style>
  .legal-content a {
    color: #06b6d4;
    text-decoration: underline;
  }
  .legal-content a:hover {
    color: #0891b2;
  }
</style>
