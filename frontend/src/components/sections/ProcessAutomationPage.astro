---
/**
 * Process Automation Service Page - GENERATIVA
 *
 * Full service detail page with 9 sections:
 * 1. Hero - Light gradient, breadcrumb, eyebrow, H1, CTA
 * 2. TrustBar Mini - Tech logos + trust badges (borrowed credibility)
 * 3. Process Types - What we automate (6 cards, mobile scroll)
 * 4. Approach - How it works (dark, vertical timeline, 5 steps)
 * 5. Industries - Who benefits most (6 cards, mobile scroll) — NEW
 * 6. Mid-page CTA - Amber button after industries
 * 7. Benefits - Results (5 metric cards, mobile scroll)
 * 8. FAQ - Accordion Q&A (6 items, SEO/AEO optimized)
 * 9. CTA - Dark gradient, eyebrow, first-person button, pilot offer, trust indicators
 *
 * SEO/AEO: Question-based H2s, answer-first lead paragraphs,
 * Schema.org handled at page shell level (@graph pattern).
 *
 * Design: Alternating light/dark sections (Stripe-inspired)
 * Pattern: Same as AboutPage.astro
 */

import { getTranslations, type Locale, buildLocalePath } from '@i18n/index';
import Button from '@components/common/Button.astro';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
const sa = t.serviceAutomation;

const demoPath = buildLocalePath('/demo/', locale);
const homePath = buildLocalePath('/', locale);
const servicesPath = buildLocalePath('/', locale) + '#services';
---

<!-- ============================================ -->
<!-- SECTION 1: HERO (Elevated gradient + decorative elements) -->
<!-- ============================================ -->
<section class="relative overflow-hidden bg-gradient-to-b from-amber-50/40 via-white to-white pt-24 pb-12 md:pt-32 md:pb-20 lg:pt-40 lg:pb-28">

  <!-- Decorative elements -->
  <div class="absolute inset-0 bg-dots opacity-[0.18]"></div>
  <div class="absolute top-16 right-[10%] w-72 h-72 md:w-96 md:h-96 bg-amber-200/25 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-0 left-[5%] w-56 h-56 md:w-72 md:h-72 bg-primary-200/20 rounded-full blur-3xl pointer-events-none"></div>

  <!-- Geometric accent — interlocking gears (automation theme) -->
  <div class="absolute top-24 left-[8%] hidden lg:block pointer-events-none opacity-[0.18]">
    <svg width="180" height="180" viewBox="0 0 140 140" fill="none">
      <circle cx="55" cy="55" r="35" stroke="#1E293B" stroke-width="1.5" stroke-dasharray="8 6" />
      <circle cx="90" cy="80" r="26" stroke="#F59E0B" stroke-width="1.5" stroke-dasharray="6 5" />
      <circle cx="55" cy="55" r="6" fill="#1E293B" opacity="0.3" />
      <circle cx="90" cy="80" r="5" fill="#F59E0B" opacity="0.3" />
    </svg>
  </div>
  <div class="absolute bottom-20 right-[6%] hidden lg:block pointer-events-none opacity-[0.18]">
    <svg width="160" height="160" viewBox="0 0 120 120" fill="none">
      <rect x="10" y="10" width="45" height="45" rx="8" stroke="#1E293B" stroke-width="1.5" stroke-dasharray="6 4" />
      <rect x="50" y="50" width="45" height="45" rx="8" stroke="#F59E0B" stroke-width="1.5" stroke-dasharray="6 4" />
      <path d="M55 10 L55 50" stroke="#1E293B" stroke-width="1" stroke-dasharray="3 3" opacity="0.5" />
      <path d="M10 55 L50 55" stroke="#1E293B" stroke-width="1" stroke-dasharray="3 3" opacity="0.5" />
    </svg>
  </div>
  <!-- Extra: floating cog outline (top-right area) -->
  <div class="absolute top-[15%] right-[18%] hidden md:block lg:hidden pointer-events-none opacity-[0.14]">
    <svg width="80" height="80" viewBox="0 0 60 60" fill="none">
      <circle cx="30" cy="30" r="18" stroke="#F59E0B" stroke-width="1.5" stroke-dasharray="5 4" />
      <circle cx="30" cy="30" r="4" fill="#F59E0B" opacity="0.3" />
    </svg>
  </div>
  <!-- Extra: small connector dots (left mid-area, visible on tablet+) -->
  <div class="absolute top-[55%] left-[3%] hidden md:block pointer-events-none opacity-[0.15]">
    <svg width="60" height="100" viewBox="0 0 50 80" fill="none">
      <circle cx="25" cy="10" r="4" fill="#1E293B" />
      <circle cx="25" cy="40" r="4" fill="#F59E0B" />
      <circle cx="25" cy="70" r="4" fill="#1E293B" />
      <line x1="25" y1="14" x2="25" y2="36" stroke="#1E293B" stroke-width="1" stroke-dasharray="3 3" />
      <line x1="25" y1="44" x2="25" y2="66" stroke="#F59E0B" stroke-width="1" stroke-dasharray="3 3" />
    </svg>
  </div>

  <div class="container-lg relative">
    <div class="max-w-3xl mx-auto text-center px-4 md:px-0">
      <!-- Breadcrumb -->
      <nav aria-label="Breadcrumb" class="mb-6 animate-fade-in">
        <ol class="flex items-center justify-center gap-2 text-sm text-neutral-500">
          <li>
            <a href={homePath} class="hover:text-primary-600 transition-colors">
              {sa.breadcrumb.home}
            </a>
          </li>
          <li>
            <svg class="w-3.5 h-3.5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li>
            <a href={servicesPath} class="hover:text-primary-600 transition-colors">
              {sa.breadcrumb.services}
            </a>
          </li>
          <li>
            <svg class="w-3.5 h-3.5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li class="text-neutral-900 font-medium">
            {sa.breadcrumb.current}
          </li>
        </ol>
      </nav>

      <!-- Eyebrow badge -->
      <div class="inline-flex items-center gap-2 px-3 py-1.5 md:px-4 md:py-2 bg-amber-50 border border-amber-200/60 text-amber-700 rounded-full text-xs md:text-sm font-medium mb-4 md:mb-6 animate-fade-in">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-amber-500"></span>
        </span>
        {sa.hero.eyebrow}
      </div>

      <!-- H1 Title -->
      <h1 class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-neutral-750 mb-4 md:mb-6 leading-tight animate-slide-up">
        {sa.hero.title}
      </h1>

      <!-- AEO Lead Paragraph -->
      <p class="text-base md:text-lg lg:text-xl text-neutral-600 leading-relaxed max-w-2xl mx-auto mb-6 md:mb-8 animate-slide-up" style="animation-delay: 100ms;">
        {sa.hero.subtitle}
      </p>

      <!-- CTA -->
      <div class="animate-slide-up" style="animation-delay: 200ms;">
        <Button
          href={demoPath}
          variant="gradient"
          size="lg"
        >
          {sa.hero.cta}
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </Button>
      </div>
    </div>
  </div>

  <!-- Bottom fade -->
  <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-white to-transparent"></div>
</section>

<!-- ============================================ -->
<!-- SECTION 2: SMART CONTEXT BAR (service-specific trust) -->
<!-- ============================================ -->
<section class="py-6 sm:py-8 md:py-10 bg-neutral-50 border-y border-neutral-200/60">
  <div class="container-lg">

    <!-- Row 1: 3 contextual pills unique to this service -->
    <div class="flex flex-wrap items-center justify-center gap-2 sm:gap-3 md:gap-4">
      <span class="inline-flex items-center gap-1.5 sm:gap-2 px-3 py-1.5 sm:px-4 sm:py-2 bg-amber-50 border border-amber-200/80 rounded-full text-[11px] sm:text-xs md:text-sm font-semibold text-amber-800">
        <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        {locale === 'ro' ? 'Implementare în zile, nu luni' : 'Implementation in days, not months'}
      </span>
      <span class="inline-flex items-center gap-1.5 sm:gap-2 px-3 py-1.5 sm:px-4 sm:py-2 bg-blue-50 border border-blue-200/80 rounded-full text-[11px] sm:text-xs md:text-sm font-semibold text-blue-800">
        <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        {locale === 'ro' ? 'Se conectează cu 50+ sisteme' : 'Connects with 50+ systems'}
      </span>
      <span class="inline-flex items-center gap-1.5 sm:gap-2 px-3 py-1.5 sm:px-4 sm:py-2 bg-green-50 border border-green-200/80 rounded-full text-[11px] sm:text-xs md:text-sm font-semibold text-green-800">
        <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        {locale === 'ro' ? 'Pilot gratuit 14 zile' : '14-day free pilot'}
      </span>
    </div>

    <!-- Row 2: Client-facing platforms + Trust badges -->
    <div class="flex flex-wrap items-center justify-center gap-x-4 md:gap-x-6 gap-y-2 mt-4 pt-4 border-t border-neutral-200/50">
      <!-- WhatsApp -->
      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#25D366" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500">WhatsApp</span>
      </div>
      <!-- Google Calendar -->
      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#4285F4" viewBox="0 0 24 24">
          <path d="M19.5 3h-3V1.5a.75.75 0 00-1.5 0V3h-6V1.5a.75.75 0 00-1.5 0V3h-3A1.5 1.5 0 003 4.5v15A1.5 1.5 0 004.5 21h15a1.5 1.5 0 001.5-1.5v-15A1.5 1.5 0 0019.5 3zM19.5 19.5h-15V8.25h15v11.25z"/>
          <path d="M8.25 11.25h2.25v2.25H8.25zM8.25 15h2.25v2.25H8.25zM12.75 11.25H15v2.25h-2.25zM12.75 15H15v2.25h-2.25z" opacity="0.5"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500 hidden sm:inline">Google Calendar</span>
        <span class="text-xs font-medium text-neutral-500 sm:hidden">Calendar</span>
      </div>
      <!-- Twilio -->
      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#F22F46" viewBox="0 0 24 24">
          <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 20.5c-4.687 0-8.5-3.813-8.5-8.5S7.313 3.5 12 3.5s8.5 3.813 8.5 8.5-3.813 8.5-8.5 8.5z"/>
          <circle cx="8.5" cy="8.5" r="1.8"/><circle cx="15.5" cy="8.5" r="1.8"/>
          <circle cx="8.5" cy="15.5" r="1.8"/><circle cx="15.5" cy="15.5" r="1.8"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500">Twilio</span>
      </div>

      <div class="w-px h-4 bg-neutral-200"></div>

      <!-- Trust badges -->
      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">GDPR</span>
      </div>
      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">SSL</span>
      </div>
      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">{locale === 'ro' ? 'Date UE' : 'EU Data'}</span>
      </div>
    </div>

  </div>
</section>

<!-- ============================================ -->
<!-- SECTION 3: PROCESS TYPES (White bg)          -->
<!-- ============================================ -->
<section class="py-12 md:py-20 lg:py-28 bg-white">
  <div class="container-lg">
    <!-- Header -->
    <div class="text-center mb-8 md:mb-16 px-4 md:px-0">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-neutral-750 mb-3 md:mb-4">
        {sa.processTypes.title}
      </h2>
      <p class="text-base md:text-lg text-neutral-600 max-w-2xl mx-auto leading-relaxed">
        {sa.processTypes.lead}
      </p>
    </div>

    <!-- Dynamic swipe indicator (mobile only) -->
    <div class="flex md:hidden items-center justify-center gap-2 text-xs text-neutral-400 mb-3 px-4" data-scroll-hint>
      <svg class="w-4 h-4 transition-opacity duration-300 opacity-0" data-arrow-left fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
      <span data-hint-text>{sa.processTypes.swipeHint}</span>
      <svg class="w-4 h-4 animate-pulse transition-opacity duration-300" data-arrow-right fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </div>

    <!-- 6 Cards - Mobile scroll / Desktop grid -->
    <div class="flex md:grid md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 overflow-x-auto md:overflow-visible pb-4 md:pb-0 snap-x snap-mandatory scrollbar-hide -mx-4 px-4 md:mx-0 md:px-0" data-scroll-container>
      {sa.processTypes.items.map((item: { icon: string; title: string; description: string }) => (
        <div class="group flex-shrink-0 w-[85vw] sm:w-[70vw] md:w-auto bg-neutral-50 p-5 md:p-6 lg:p-8 border border-neutral-100 hover:shadow-lg hover:border-primary-200/50 transition-all duration-300 snap-center" style="border-radius: 16px;">
          <!-- Icon -->
          <div class="w-11 h-11 md:w-14 md:h-14 rounded-xl bg-neutral-100 flex items-center justify-center mb-4 md:mb-6 transition-all duration-300">
            {item.icon === 'document' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
              </svg>
            )}
            {item.icon === 'communication' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
              </svg>
            )}
            {item.icon === 'approval' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m8.9-4.414c.376.023.75.05 1.124.08 1.131.094 1.976 1.057 1.976 2.192V16.5A2.25 2.25 0 0118 18.75h-2.25m-7.5-10.5H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V18.75m-7.5-10.5h6.375c.621 0 1.125.504 1.125 1.125v9.375m-8.25-3l1.5 1.5 3-3.75" />
              </svg>
            )}
            {item.icon === 'reporting' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
              </svg>
            )}
            {item.icon === 'onboarding' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
              </svg>
