---
/**
 * Benefits Section Component
 *
 * Displays key benefits with statistics
 */

import { getTranslations, type Locale } from '@i18n/index';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);

const benefits = [
  {
    value: t.benefits.items.cost.value,
    label: t.benefits.items.cost.label,
    description: t.benefits.items.cost.description,
    icon: 'chart-down',
  },
  {
    value: t.benefits.items.availability.value,
    label: t.benefits.items.availability.label,
    description: t.benefits.items.availability.description,
    icon: 'clock',
  },
  {
    value: t.benefits.items.speed.value,
    label: t.benefits.items.speed.label,
    description: t.benefits.items.speed.description,
    icon: 'lightning',
  },
  {
    value: t.benefits.items.roi.value,
    label: t.benefits.items.roi.label,
    description: t.benefits.items.roi.description,
    icon: 'trending-up',
  },
];
---

<section class="section bg-neutral-900 text-white">
  <div class="container-lg">
    <!-- Section header -->
    <div class="text-center max-w-2xl mx-auto mb-12 md:mb-16">
      <h2 class="text-heading-lg md:text-display text-white mb-4">
        {t.benefits.title}
      </h2>
      <p class="text-body-lg text-neutral-300">
        {t.benefits.subtitle}
      </p>
    </div>

    <!-- Benefits grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {benefits.map((benefit, index) => (
        <div
          class="text-center p-6 rounded-2xl bg-neutral-800/50 border border-neutral-700 hover:border-primary-500 transition-colors"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Stat value -->
          <div class="text-5xl md:text-6xl font-bold text-gradient mb-2">
            {benefit.value}
          </div>

          <!-- Label -->
          <div class="text-lg font-semibold text-white mb-2">
            {benefit.label}
          </div>

          <!-- Description -->
          <p class="text-sm text-neutral-400">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
