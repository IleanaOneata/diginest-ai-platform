---
/**
 * AI Integrations Service Page - GENERATIVA
 *
 * Full service detail page with 9 sections:
 * 1. Hero - Light gradient, breadcrumb, eyebrow, H1, CTA
 * 2. TrustBar Mini - Tech logos + trust badges (borrowed credibility)
 * 3. Systems - What we integrate (6 cards, mobile scroll)
 * 4. Approach - How integration works (dark, vertical timeline, 5 steps)
 * 5. Capabilities - What automations become possible (6 cards, mobile scroll)
 * 6. Mid-page CTA - Amber button after capabilities
 * 7. Benefits - Results (5 metric cards, mobile scroll)
 * 8. FAQ - Accordion Q&A (8 items, SEO/AEO optimized)
 * 9. CTA - Dark gradient, eyebrow, first-person button, pilot offer, trust indicators
 *
 * SEO/AEO: Question-based H2s, answer-first lead paragraphs,
 * Schema.org handled at page shell level (@graph pattern).
 *
 * Design: Alternating light/dark sections (Stripe-inspired)
 * Pattern: Same as ConversationalAgentsPage.astro
 */

import { getTranslations, type Locale, buildLocalePath } from '@i18n/index';
import Button from '@components/common/Button.astro';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
const si = t.serviceIntegrations;

const demoPath = buildLocalePath('/demo/', locale);
const homePath = buildLocalePath('/', locale);
const servicesPath = buildLocalePath('/', locale) + '#services';
---

<!-- ============================================ -->
<!-- SECTION 1: HERO (Elevated gradient + decorative elements) -->
<!-- ============================================ -->
<section class="relative overflow-hidden bg-gradient-to-b from-blue-50/30 via-white to-white pt-24 pb-12 md:pt-32 md:pb-20 lg:pt-40 lg:pb-28">

  <!-- Decorative elements -->
  <div class="absolute inset-0 bg-dots opacity-[0.18]"></div>
  <div class="absolute top-16 left-[12%] w-64 h-64 md:w-80 md:h-80 bg-blue-200/25 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-12 right-[8%] w-52 h-52 md:w-72 md:h-72 bg-amber-200/20 rounded-full blur-3xl pointer-events-none"></div>

  <!-- Geometric accent — connected nodes (integration theme) -->
  <div class="absolute top-24 right-[6%] hidden lg:block pointer-events-none opacity-[0.12]">
    <svg width="140" height="140" viewBox="0 0 140 140" fill="none">
      <circle cx="35" cy="35" r="10" stroke="#4F46E5" stroke-width="1.5" />
      <circle cx="105" cy="35" r="10" stroke="#F59E0B" stroke-width="1.5" />
      <circle cx="70" cy="105" r="10" stroke="#4F46E5" stroke-width="1.5" />
      <circle cx="35" cy="35" r="3" fill="#4F46E5" opacity="0.3" />
      <circle cx="105" cy="35" r="3" fill="#F59E0B" opacity="0.3" />
      <circle cx="70" cy="105" r="3" fill="#4F46E5" opacity="0.3" />
      <line x1="45" y1="35" x2="95" y2="35" stroke="#1E293B" stroke-width="1" stroke-dasharray="4 3" />
      <line x1="40" y1="43" x2="63" y2="97" stroke="#1E293B" stroke-width="1" stroke-dasharray="4 3" />
      <line x1="100" y1="43" x2="77" y2="97" stroke="#1E293B" stroke-width="1" stroke-dasharray="4 3" />
    </svg>
  </div>
  <div class="absolute bottom-20 left-[5%] hidden lg:block pointer-events-none opacity-[0.12]">
    <svg width="110" height="70" viewBox="0 0 110 70" fill="none">
      <rect x="5" y="12" width="35" height="24" rx="5" stroke="#4F46E5" stroke-width="1.5" />
      <rect x="70" y="12" width="35" height="24" rx="5" stroke="#F59E0B" stroke-width="1.5" />
      <path d="M40 24 L70 24" stroke="#1E293B" stroke-width="1.5" stroke-dasharray="3 3" />
      <circle cx="55" cy="24" r="4" stroke="#1E293B" stroke-width="1.5" />
      <path d="M53 24 L57 24 M55 22 L55 26" stroke="#1E293B" stroke-width="1" />
    </svg>
  </div>
  <!-- Extra: data flow arrows (right mid-area, tablet+) -->
  <div class="absolute top-[48%] right-[3%] hidden md:block lg:hidden pointer-events-none opacity-[0.10]">
    <svg width="40" height="70" viewBox="0 0 40 70" fill="none">
      <circle cx="20" cy="8" r="5" stroke="#4F46E5" stroke-width="1.5" />
      <path d="M20 13 L20 28" stroke="#1E293B" stroke-width="1" stroke-dasharray="3 2" />
      <polygon points="16,28 20,34 24,28" fill="#1E293B" opacity="0.4" />
      <circle cx="20" cy="42" r="5" stroke="#F59E0B" stroke-width="1.5" />
      <path d="M20 47 L20 62" stroke="#1E293B" stroke-width="1" stroke-dasharray="3 2" />
      <polygon points="16,56 20,62 24,56" fill="#1E293B" opacity="0.4" />
    </svg>
  </div>
  <!-- Extra: integration flow diagram (left mid area, distributed) -->
  <div class="absolute top-[38%] left-[2%] hidden md:block pointer-events-none opacity-[0.10]">
    <svg width="60" height="80" viewBox="0 0 60 80" fill="none">
      <!-- Source boxes -->
      <rect x="2" y="4" width="18" height="12" rx="3" stroke="#4F46E5" stroke-width="1.3" />
      <rect x="2" y="34" width="18" height="12" rx="3" stroke="#4F46E5" stroke-width="1.3" />
      <rect x="2" y="64" width="18" height="12" rx="3" stroke="#F59E0B" stroke-width="1.3" />
      <!-- Dots inside boxes -->
      <circle cx="11" cy="10" r="1.5" fill="#4F46E5" opacity="0.35" />
      <circle cx="11" cy="40" r="1.5" fill="#4F46E5" opacity="0.35" />
      <circle cx="11" cy="70" r="1.5" fill="#F59E0B" opacity="0.35" />
      <!-- Connection lines to central hub -->
      <path d="M20 10 L36 38" stroke="#1E293B" stroke-width="1" stroke-dasharray="3 2" />
      <path d="M20 40 L36 40" stroke="#1E293B" stroke-width="1" stroke-dasharray="3 2" />
      <path d="M20 70 L36 42" stroke="#1E293B" stroke-width="1" stroke-dasharray="3 2" />
      <!-- Central hub circle -->
      <circle cx="42" cy="40" r="8" stroke="#4F46E5" stroke-width="1.5" />
      <circle cx="42" cy="40" r="3" fill="#4F46E5" opacity="0.2" />
      <!-- Output arrow -->
      <path d="M50 40 L58 40" stroke="#F59E0B" stroke-width="1.3" stroke-linecap="round" />
      <polygon points="56,37 60,40 56,43" fill="#F59E0B" opacity="0.5" />
    </svg>
  </div>

  <div class="container-lg relative">
    <div class="max-w-3xl mx-auto text-center px-4 md:px-0">
      <!-- Breadcrumb -->
      <nav aria-label="Breadcrumb" class="mb-6 animate-fade-in">
        <ol class="flex items-center justify-center gap-2 text-sm text-neutral-500">
          <li>
            <a href={homePath} class="hover:text-primary-600 transition-colors">
              {si.breadcrumb.home}
            </a>
          </li>
          <li>
            <svg class="w-3.5 h-3.5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li>
            <a href={servicesPath} class="hover:text-primary-600 transition-colors">
              {si.breadcrumb.services}
            </a>
          </li>
          <li>
            <svg class="w-3.5 h-3.5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li class="text-neutral-900 font-medium">
            {si.breadcrumb.current}
          </li>
        </ol>
      </nav>

      <!-- Eyebrow badge -->
      <div class="inline-flex items-center gap-2 px-3 py-1.5 md:px-4 md:py-2 bg-blue-50 border border-blue-200/60 text-blue-700 rounded-full text-xs md:text-sm font-medium mb-4 md:mb-6 animate-fade-in">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
        </span>
        {si.hero.eyebrow}
      </div>

      <!-- H1 Title -->
      <h1 class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-neutral-750 mb-4 md:mb-6 leading-tight animate-slide-up">
        {si.hero.title}
      </h1>

      <!-- AEO Lead Paragraph -->
      <p class="text-base md:text-lg lg:text-xl text-neutral-600 leading-relaxed max-w-2xl mx-auto mb-6 md:mb-8 animate-slide-up" style="animation-delay: 100ms;">
        {si.hero.subtitle}
      </p>

      <!-- CTA -->
      <div class="animate-slide-up" style="animation-delay: 200ms;">
        <Button
          href={demoPath}
          variant="gradient"
          size="lg"
        >
          {si.hero.cta}
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </Button>
      </div>
    </div>
  </div>

  <!-- Bottom fade -->
  <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-white to-transparent"></div>
</section>

<!-- ============================================ -->
<!-- SECTION 2: SMART CONTEXT BAR (service-specific trust) -->
<!-- ============================================ -->
<section class="py-6 sm:py-8 md:py-10 bg-neutral-50 border-y border-neutral-200/60">
  <div class="container-lg">

    <!-- Row 1: 3 contextual pills unique to this service -->
    <div class="flex flex-wrap items-center justify-center gap-2 sm:gap-3 md:gap-4">
      <span class="inline-flex items-center gap-1.5 sm:gap-2 px-3 py-1.5 sm:px-4 sm:py-2 bg-indigo-50 border border-indigo-200/80 rounded-full text-[11px] sm:text-xs md:text-sm font-semibold text-indigo-800">
        <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
        </svg>
        {locale === 'ro' ? 'CRM · Calendar · ERP' : 'CRM · Calendar · ERP'}
      </span>
      <span class="inline-flex items-center gap-1.5 sm:gap-2 px-3 py-1.5 sm:px-4 sm:py-2 bg-rose-50 border border-rose-200/80 rounded-full text-[11px] sm:text-xs md:text-sm font-semibold text-rose-800">
        <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
        </svg>
        {locale === 'ro' ? 'Zero copy-paste, zero erori' : 'Zero copy-paste, zero errors'}
      </span>
      <span class="inline-flex items-center gap-1.5 sm:gap-2 px-3 py-1.5 sm:px-4 sm:py-2 bg-green-50 border border-green-200/80 rounded-full text-[11px] sm:text-xs md:text-sm font-semibold text-green-800">
        <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        {locale === 'ro' ? 'Pilot gratuit 14 zile' : '14-day free pilot'}
      </span>
    </div>

    <!-- Row 2: Platforms + Trust badges -->
    <div class="flex flex-wrap items-center justify-center gap-x-4 md:gap-x-6 gap-y-2 mt-4 pt-4 border-t border-neutral-200/50">
      <!-- Google Calendar -->
      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#4285F4" viewBox="0 0 24 24">
          <path d="M19.5 3h-3V1.5a.75.75 0 00-1.5 0V3h-6V1.5a.75.75 0 00-1.5 0V3h-3A1.5 1.5 0 003 4.5v15A1.5 1.5 0 004.5 21h15a1.5 1.5 0 001.5-1.5v-15A1.5 1.5 0 0019.5 3zM19.5 19.5h-15V8.25h15v11.25z"/>
          <path d="M8.25 11.25h2.25v2.25H8.25zM8.25 15h2.25v2.25H8.25zM12.75 11.25H15v2.25h-2.25zM12.75 15H15v2.25h-2.25z" opacity="0.5"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500 hidden sm:inline">Google Calendar</span>
        <span class="text-xs font-medium text-neutral-500 sm:hidden">Calendar</span>
      </div>
      <!-- WhatsApp -->
      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#25D366" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500">WhatsApp</span>
      </div>
      <!-- Twilio -->
      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#F22F46" viewBox="0 0 24 24">
          <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 20.5c-4.687 0-8.5-3.813-8.5-8.5S7.313 3.5 12 3.5s8.5 3.813 8.5 8.5-3.813 8.5-8.5 8.5z"/>
          <circle cx="8.5" cy="8.5" r="1.8"/><circle cx="15.5" cy="8.5" r="1.8"/>
          <circle cx="8.5" cy="15.5" r="1.8"/><circle cx="15.5" cy="15.5" r="1.8"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500">Twilio</span>
      </div>

      <div class="w-px h-4 bg-neutral-200"></div>

      <!-- Trust badges -->
      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">GDPR</span>
      </div>
      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">SSL</span>
      </div>
      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">{locale === 'ro' ? 'Date UE' : 'EU Data'}</span>
      </div>
    </div>

  </div>
</section>

<!-- ============================================ -->
<!-- SECTION 3: SYSTEMS (White bg)                -->
<!-- ============================================ -->
<section class="py-12 md:py-20 lg:py-28 bg-white">
  <div class="container-lg">
    <!-- Header -->
    <div class="text-center mb-8 md:mb-16 px-4 md:px-0">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-neutral-750 mb-3 md:mb-4">
        {si.systems.title}
      </h2>
      <p class="text-base md:text-lg text-neutral-600 max-w-2xl mx-auto leading-relaxed">
        {si.systems.lead}
      </p>
    </div>

    <!-- Dynamic swipe indicator (mobile only) -->
    <div class="flex md:hidden items-center justify-center gap-2 text-xs text-neutral-400 mb-3 px-4" data-scroll-hint>
      <svg class="w-4 h-4 transition-opacity duration-300 opacity-0" data-arrow-left fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
      <span data-hint-text>{si.systems.swipeHint}</span>
      <svg class="w-4 h-4 animate-pulse transition-opacity duration-300" data-arrow-right fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </div>

    <!-- 6 Cards - Mobile scroll / Desktop grid -->
    <div class="flex md:grid md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 overflow-x-auto md:overflow-visible pb-4 md:pb-0 snap-x snap-mandatory scrollbar-hide -mx-4 px-4 md:mx-0 md:px-0" data-scroll-container>
      {si.systems.items.map((item: { icon: string; title: string; description: string }) => (
        <div class="group flex-shrink-0 w-[85vw] sm:w-[70vw] md:w-auto bg-neutral-50 p-5 md:p-6 lg:p-8 border border-neutral-100 hover:shadow-lg hover:border-primary-200/50 transition-all duration-300 snap-center" style="border-radius: 16px;">
          <!-- Icon -->
          <div class="w-11 h-11 md:w-14 md:h-14 rounded-xl bg-neutral-100 flex items-center justify-center mb-4 md:mb-6 transition-all duration-300">
            {item.icon === 'database' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125" />
              </svg>
            )}
            {item.icon === 'calendar' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5m-9-6h.008v.008H12v-.008zM12 15h.008v.008H12V15zm0 2.25h.008v.008H12v-.008zM9.75 15h.008v.008H9.75V15zm0 2.25h.008v.008H9.75v-.008zM7.5 15h.008v.008H7.5V15zm0 2.25h.008v.008H7.5v-.008zm6.75-4.5h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V15zm0 2.25h.008v.008h-.008v-.008zm2.25-4.5h.008v.008H16.5v-.008zm0 2.25h.008v.008H16.5V15z" />
              </svg>
            )}
