---
/**
 * TrustBar Section Component
 *
 * Technology partner logos + GDPR/security trust badges.
 * "Borrowed credibility" — visitors trust platforms they already know.
 * Placed between BenefitsStrip and Services on homepage.
 */

interface Props {
  locale?: 'ro' | 'en';
}

const { locale = 'ro' } = Astro.props;
const isRo = locale === 'ro';
---

<section class="py-8 md:py-12 bg-white border-t border-b border-neutral-100">
  <div class="container-lg">
    <!-- Label -->
    <p class="text-center text-xs md:text-sm text-neutral-400 uppercase tracking-wider font-medium mb-6">
      {isRo ? 'Construit pe tehnologie de încredere' : 'Built on trusted technology'}
    </p>

    <!-- Technology logos row -->
    <div class="flex flex-wrap items-center justify-center gap-x-8 md:gap-x-12 gap-y-4 mb-8">
      <!-- VAPI -->
      <div class="flex items-center gap-2 text-neutral-400 hover:text-neutral-600 transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
        <span class="text-sm font-medium">VAPI</span>
      </div>

      <!-- WhatsApp Business -->
      <div class="flex items-center gap-2 text-neutral-400 hover:text-neutral-600 transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <span class="text-sm font-medium">WhatsApp</span>
      </div>

      <!-- Google Calendar -->
      <div class="flex items-center gap-2 text-neutral-400 hover:text-neutral-600 transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20a2 2 0 002 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11zM9 11H7v2h2v-2zm4 0h-2v2h2v-2zm4 0h-2v2h2v-2z"/>
        </svg>
        <span class="text-sm font-medium">Google Calendar</span>
      </div>

      <!-- Twilio -->
      <div class="flex items-center gap-2 text-neutral-400 hover:text-neutral-600 transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 20c-4.418 0-8-3.582-8-8s3.582-8 8-8 8 3.582 8 8-3.582 8-8 8zm-2-11a2 2 0 100-4 2 2 0 000 4zm4 0a2 2 0 100-4 2 2 0 000 4zm-4 4a2 2 0 100-4 2 2 0 000 4zm4 0a2 2 0 100-4 2 2 0 000 4z"/>
        </svg>
        <span class="text-sm font-medium">Twilio</span>
      </div>

      <!-- Salesforce / CRM -->
      <div class="flex items-center gap-2 text-neutral-400 hover:text-neutral-600 transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
        </svg>
        <span class="text-sm font-medium">CRM</span>
      </div>

      <!-- Vercel -->
      <div class="flex items-center gap-2 text-neutral-400 hover:text-neutral-600 transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 1L24 22H0L12 1z"/>
        </svg>
        <span class="text-sm font-medium">Vercel</span>
      </div>
    </div>

    <!-- Security badges -->
    <div class="flex flex-wrap items-center justify-center gap-x-6 md:gap-x-8 gap-y-3">
      <!-- GDPR -->
      <div class="flex items-center gap-2 text-neutral-500">
        <svg class="w-4 h-4 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        <span class="text-xs font-medium">GDPR Compliant</span>
      </div>

      <!-- SSL -->
      <div class="flex items-center gap-2 text-neutral-500">
        <svg class="w-4 h-4 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
        <span class="text-xs font-medium">SSL Encrypted</span>
      </div>

      <!-- EU Data -->
      <div class="flex items-center gap-2 text-neutral-500">
        <svg class="w-4 h-4 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-xs font-medium">{isRo ? 'Date procesate în UE' : 'EU data processing'}</span>
      </div>

      <!-- Pilot gratuit -->
      <div class="flex items-center gap-2 text-neutral-500">
        <svg class="w-4 h-4 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-xs font-medium">{isRo ? 'Pilot gratuit 14 zile' : '14-day free pilot'}</span>
      </div>
    </div>
  </div>
</section>
