---
/**
 * TrustBar Section Component — v9 (Process Strip)
 *
 * Micro-timeline between Hero and Services showing 3 simple steps.
 * Addresses #1 B2B fear: "Is this complicated?"
 *
 * No metric redundancy with Hero (which already shows 0.8s, 24/7, 90%).
 * Platform logos kept at visible size in secondary row.
 */

interface Props {
  locale?: 'ro' | 'en';
}

const { locale = 'ro' } = Astro.props;
const isRo = locale === 'ro';

const steps = [
  {
    number: '1',
    title: isRo ? 'Discutăm 30 min' : 'We talk for 30 min',
    subtitle: isRo ? 'fără obligații' : 'no obligations',
    icon: 'chat',
  },
  {
    number: '2',
    title: isRo ? 'Configurăm asistentul' : 'We configure your assistant',
    subtitle: isRo ? 'rapid, pe specificul tău' : 'fast, tailored to you',
    icon: 'cog',
  },
  {
    number: '3',
    title: isRo ? 'Testezi gratuit' : 'You test for free',
    subtitle: isRo ? 'fără card, fără risc' : 'no card, no risk',
    icon: 'rocket',
  },
];
---

<section class="py-6 sm:py-8 md:py-10 bg-neutral-50 border-y border-neutral-200/60">
  <div class="container-lg">

    <!-- Row 1: 3-step process -->
    <div class="flex items-center justify-center gap-2 sm:gap-4 md:gap-6 lg:gap-8">
      {steps.map((step, i) => (
        <>
          {/* Step */}
          <div class="flex items-center gap-1.5 sm:gap-2.5 md:gap-3">
            {/* Number circle */}
            <div class="w-7 h-7 sm:w-9 sm:h-9 md:w-11 md:h-11 rounded-full bg-white border-2 border-accent-400 flex items-center justify-center flex-shrink-0 shadow-sm">
              <span class="text-xs sm:text-sm md:text-base font-bold text-accent-600">{step.number}</span>
            </div>
            {/* Text */}
            <div>
              <div class="text-[11px] sm:text-sm md:text-base font-semibold text-neutral-800 leading-tight">
                {step.title}
              </div>
              <div class="text-[9px] sm:text-xs md:text-sm text-neutral-500 leading-tight">
                {step.subtitle}
              </div>
            </div>
          </div>

          {/* Arrow between steps (not after last) */}
          {i < steps.length - 1 && (
            <svg class="w-3.5 h-3.5 sm:w-5 sm:h-5 md:w-6 md:h-6 text-neutral-300 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          )}
        </>
      ))}
    </div>

    <!-- Row 2: Platforms + Badges -->
    <div class="flex flex-wrap items-center justify-center gap-x-4 md:gap-x-6 gap-y-2 mt-5 pt-4 border-t border-neutral-200/50">

      <!-- Platform logos (visible size) -->
      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#25D366" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500">WhatsApp</span>
      </div>

      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#4285F4" viewBox="0 0 24 24">
          <path d="M19.5 3h-3V1.5a.75.75 0 00-1.5 0V3h-6V1.5a.75.75 0 00-1.5 0V3h-3A1.5 1.5 0 003 4.5v15A1.5 1.5 0 004.5 21h15a1.5 1.5 0 001.5-1.5v-15A1.5 1.5 0 0019.5 3zM19.5 19.5h-15V8.25h15v11.25z"/>
          <path d="M8.25 11.25h2.25v2.25H8.25zM8.25 15h2.25v2.25H8.25zM12.75 11.25H15v2.25h-2.25zM12.75 15H15v2.25h-2.25z" opacity="0.5"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500 hidden sm:inline">Google Calendar</span>
        <span class="text-xs font-medium text-neutral-500 sm:hidden">Calendar</span>
      </div>

      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#F22F46" viewBox="0 0 24 24">
          <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 20.5c-4.687 0-8.5-3.813-8.5-8.5S7.313 3.5 12 3.5s8.5 3.813 8.5 8.5-3.813 8.5-8.5 8.5z"/>
          <circle cx="8.5" cy="8.5" r="1.8"/>
          <circle cx="15.5" cy="8.5" r="1.8"/>
          <circle cx="8.5" cy="15.5" r="1.8"/>
          <circle cx="15.5" cy="15.5" r="1.8"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500">Twilio</span>
      </div>

      <!-- Separator -->
      <div class="w-px h-4 bg-neutral-200"></div>

      <!-- Trust badges -->
      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">GDPR</span>
      </div>

      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">SSL</span>
      </div>

      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">{isRo ? 'Date UE' : 'EU Data'}</span>
      </div>
    </div>

  </div>
</section>
