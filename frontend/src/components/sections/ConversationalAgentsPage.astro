---
/**
 * Conversational AI Agents Service Page - GENERATIVA
 *
 * Full service detail page with 10 sections:
 * 1. Hero - Light gradient, breadcrumb, eyebrow, H1, CTA
 * 2. TrustBar Mini - Tech logos + trust badges (borrowed credibility)
 * 3. Capabilities - What AI agents do (6 cards, mobile scroll)
 * 4. Approach - How it works in practice (dark, vertical timeline, 4 steps)
 * 5. Industries - Who benefits most (6 cards, mobile scroll)
 * 6. Mid-page CTA - Amber button after industries
 * 7. Benefits - Results (5 metric cards, mobile scroll)
 * 8. FAQ - Accordion Q&A (8 items, SEO/AEO optimized)
 * 9. CTA - Dark gradient, eyebrow, first-person button, pilot offer, trust indicators
 *
 * SEO/AEO: Question-based H2s, answer-first lead paragraphs,
 * Schema.org handled at page shell level (@graph pattern).
 *
 * Design: Alternating light/dark sections (Stripe-inspired)
 * Pattern: Same as ProcessAutomationPage.astro
 */

import { getTranslations, type Locale, buildLocalePath } from '@i18n/index';
import Button from '@components/common/Button.astro';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
const sc = t.serviceConversational;

const demoPath = buildLocalePath('/demo/', locale);
const homePath = buildLocalePath('/', locale);
const servicesPath = buildLocalePath('/', locale) + '#services';
---

<!-- ============================================ -->
<!-- SECTION 1: HERO (Elevated gradient + decorative elements) -->
<!-- ============================================ -->
<section class="relative overflow-hidden bg-gradient-to-b from-purple-50/30 via-white to-white pt-24 pb-12 md:pt-32 md:pb-20 lg:pt-40 lg:pb-28">

  <!-- Decorative elements -->
  <div class="absolute inset-0 bg-dots opacity-[0.18]"></div>
  <div class="absolute top-12 left-[8%] w-64 h-64 md:w-80 md:h-80 bg-purple-200/25 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-8 right-[10%] w-56 h-56 md:w-72 md:h-72 bg-amber-200/20 rounded-full blur-3xl pointer-events-none"></div>

  <!-- Geometric accent — speech bubbles (conversational theme) -->
  <div class="absolute top-28 right-[7%] hidden lg:block pointer-events-none opacity-[0.18]">
    <svg width="170" height="145" viewBox="0 0 130 110" fill="none">
      <rect x="5" y="5" width="65" height="42" rx="14" stroke="#7C3AED" stroke-width="1.5" />
      <polygon points="25,47 37,58 13,58" stroke="#7C3AED" stroke-width="1.5" fill="none" />
      <circle cx="22" cy="24" r="3" fill="#7C3AED" opacity="0.3" />
      <circle cx="35" cy="24" r="3" fill="#7C3AED" opacity="0.3" />
      <circle cx="48" cy="24" r="3" fill="#7C3AED" opacity="0.3" />
      <rect x="45" y="38" width="60" height="38" rx="12" stroke="#F59E0B" stroke-width="1.5" />
      <polygon points="82,76 92,87 72,87" stroke="#F59E0B" stroke-width="1.5" fill="none" />
    </svg>
  </div>
  <div class="absolute bottom-24 left-[5%] hidden lg:block pointer-events-none opacity-[0.18]">
    <svg width="120" height="120" viewBox="0 0 90 90" fill="none">
      <circle cx="45" cy="32" r="4" fill="#7C3AED" opacity="0.4" />
      <circle cx="31" cy="32" r="4" fill="#7C3AED" opacity="0.4" />
      <circle cx="59" cy="32" r="4" fill="#7C3AED" opacity="0.4" />
      <rect x="10" y="10" width="70" height="50" rx="16" stroke="#1E293B" stroke-width="1.5" />
      <polygon points="30,60 40,72 20,72" stroke="#1E293B" stroke-width="1.5" fill="none" />
    </svg>
  </div>
  <!-- Extra: sound wave / voice indicator (left mid-area, tablet+) -->
  <div class="absolute top-[50%] left-[3%] hidden md:block lg:hidden pointer-events-none opacity-[0.15]">
    <svg width="55" height="80" viewBox="0 0 40 60" fill="none">
      <line x1="8" y1="18" x2="8" y2="42" stroke="#7C3AED" stroke-width="2.5" stroke-linecap="round" />
      <line x1="20" y1="10" x2="20" y2="50" stroke="#F59E0B" stroke-width="2.5" stroke-linecap="round" />
      <line x1="32" y1="15" x2="32" y2="45" stroke="#7C3AED" stroke-width="2.5" stroke-linecap="round" />
    </svg>
  </div>
  <!-- Extra: small chat dot cluster (right bottom area) -->
  <div class="absolute bottom-[12%] right-[3%] hidden md:block pointer-events-none opacity-[0.15]">
    <svg width="65" height="40" viewBox="0 0 50 30" fill="none">
      <circle cx="10" cy="15" r="5" stroke="#7C3AED" stroke-width="1.5" />
      <circle cx="25" cy="15" r="5" stroke="#F59E0B" stroke-width="1.5" />
      <circle cx="40" cy="15" r="5" stroke="#1E293B" stroke-width="1.5" />
    </svg>
  </div>
  <!-- Extra: phone / headset (right mid-upper area, lg only) -->
  <div class="absolute top-[30%] right-[14%] hidden lg:block pointer-events-none opacity-[0.15]">
    <svg width="75" height="85" viewBox="0 0 55 65" fill="none">
      <!-- Headset arc -->
      <path d="M10 38 C10 18, 45 18, 45 38" stroke="#7C3AED" stroke-width="1.8" fill="none" stroke-linecap="round" />
      <!-- Left earpiece -->
      <rect x="5" y="35" width="10" height="16" rx="4" stroke="#7C3AED" stroke-width="1.5" />
      <rect x="7" y="38" width="6" height="10" rx="2" fill="#7C3AED" opacity="0.15" />
      <!-- Right earpiece -->
      <rect x="40" y="35" width="10" height="16" rx="4" stroke="#F59E0B" stroke-width="1.5" />
      <rect x="42" y="38" width="6" height="10" rx="2" fill="#F59E0B" opacity="0.15" />
      <!-- Microphone arm -->
      <path d="M40 48 L35 56 L30 56" stroke="#1E293B" stroke-width="1.2" fill="none" stroke-linecap="round" stroke-linejoin="round" />
      <circle cx="28" cy="56" r="3" stroke="#1E293B" stroke-width="1.2" />
      <circle cx="28" cy="56" r="1" fill="#1E293B" opacity="0.3" />
      <!-- Signal waves -->
      <path d="M50 30 C53 27, 53 23, 50 20" stroke="#7C3AED" stroke-width="1" fill="none" opacity="0.4" stroke-linecap="round" />
      <path d="M53 33 C58 28, 58 19, 53 14" stroke="#7C3AED" stroke-width="1" fill="none" opacity="0.25" stroke-linecap="round" />
    </svg>
  </div>

  <div class="container-lg relative">
    <div class="max-w-3xl mx-auto text-center px-4 md:px-0">
      <!-- Breadcrumb -->
      <nav aria-label="Breadcrumb" class="mb-6 animate-fade-in">
        <ol class="flex items-center justify-center gap-2 text-sm text-neutral-500">
          <li>
            <a href={homePath} class="hover:text-primary-600 transition-colors">
              {sc.breadcrumb.home}
            </a>
          </li>
          <li>
            <svg class="w-3.5 h-3.5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li>
            <a href={servicesPath} class="hover:text-primary-600 transition-colors">
              {sc.breadcrumb.services}
            </a>
          </li>
          <li>
            <svg class="w-3.5 h-3.5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li class="text-neutral-900 font-medium">
            {sc.breadcrumb.current}
          </li>
        </ol>
      </nav>

      <!-- Eyebrow badge -->
      <div class="inline-flex items-center gap-2 px-3 py-1.5 md:px-4 md:py-2 bg-purple-50 border border-purple-200/60 text-purple-700 rounded-full text-xs md:text-sm font-medium mb-4 md:mb-6 animate-fade-in">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-purple-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-purple-500"></span>
        </span>
        {sc.hero.eyebrow}
      </div>

      <!-- H1 Title -->
      <h1 class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-neutral-750 mb-4 md:mb-6 leading-tight animate-slide-up">
        {sc.hero.title}
      </h1>

      <!-- AEO Lead Paragraph -->
      <p class="text-base md:text-lg lg:text-xl text-neutral-600 leading-relaxed max-w-2xl mx-auto mb-6 md:mb-8 animate-slide-up" style="animation-delay: 100ms;">
        {sc.hero.subtitle}
      </p>

      <!-- CTA -->
      <div class="animate-slide-up" style="animation-delay: 200ms;">
        <Button
          href={demoPath}
          variant="gradient"
          size="lg"
        >
          {sc.hero.cta}
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </Button>
      </div>
    </div>
  </div>

  <!-- Bottom fade -->
  <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-white to-transparent"></div>
</section>

<!-- ============================================ -->
<!-- SECTION 2: SMART CONTEXT BAR (service-specific trust) -->
<!-- ============================================ -->
<section class="py-6 sm:py-8 md:py-10 bg-neutral-50 border-y border-neutral-200/60">
  <div class="container-lg">

    <!-- Row 1: 3 contextual pills unique to this service -->
    <div class="flex flex-wrap items-center justify-center gap-2 sm:gap-3 md:gap-4">
      <span class="inline-flex items-center gap-1.5 sm:gap-2 px-3 py-1.5 sm:px-4 sm:py-2 bg-purple-50 border border-purple-200/80 rounded-full text-[11px] sm:text-xs md:text-sm font-semibold text-purple-800">
        <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
        </svg>
        {locale === 'ro' ? 'Voce naturală în română' : 'Natural voice in your language'}
      </span>
      <span class="inline-flex items-center gap-1.5 sm:gap-2 px-3 py-1.5 sm:px-4 sm:py-2 bg-emerald-50 border border-emerald-200/80 rounded-full text-[11px] sm:text-xs md:text-sm font-semibold text-emerald-800">
        <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        {locale === 'ro' ? 'WhatsApp · Telefon · Email' : 'WhatsApp · Phone · Email'}
      </span>
      <span class="inline-flex items-center gap-1.5 sm:gap-2 px-3 py-1.5 sm:px-4 sm:py-2 bg-green-50 border border-green-200/80 rounded-full text-[11px] sm:text-xs md:text-sm font-semibold text-green-800">
        <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        {locale === 'ro' ? 'Pilot gratuit 14 zile' : '14-day free pilot'}
      </span>
    </div>

    <!-- Row 2: Platforms + Trust badges -->
    <div class="flex flex-wrap items-center justify-center gap-x-4 md:gap-x-6 gap-y-2 mt-4 pt-4 border-t border-neutral-200/50">
      <!-- WhatsApp -->
      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#25D366" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500">WhatsApp</span>
      </div>
      <!-- Twilio -->
      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#F22F46" viewBox="0 0 24 24">
          <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 20.5c-4.687 0-8.5-3.813-8.5-8.5S7.313 3.5 12 3.5s8.5 3.813 8.5 8.5-3.813 8.5-8.5 8.5z"/>
          <circle cx="8.5" cy="8.5" r="1.8"/><circle cx="15.5" cy="8.5" r="1.8"/>
          <circle cx="8.5" cy="15.5" r="1.8"/><circle cx="15.5" cy="15.5" r="1.8"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500">Twilio</span>
      </div>
      <!-- Google Calendar -->
      <div class="flex items-center gap-1.5">
        <svg class="w-5 h-5" fill="#4285F4" viewBox="0 0 24 24">
          <path d="M19.5 3h-3V1.5a.75.75 0 00-1.5 0V3h-6V1.5a.75.75 0 00-1.5 0V3h-3A1.5 1.5 0 003 4.5v15A1.5 1.5 0 004.5 21h15a1.5 1.5 0 001.5-1.5v-15A1.5 1.5 0 0019.5 3zM19.5 19.5h-15V8.25h15v11.25z"/>
          <path d="M8.25 11.25h2.25v2.25H8.25zM8.25 15h2.25v2.25H8.25zM12.75 11.25H15v2.25h-2.25zM12.75 15H15v2.25h-2.25z" opacity="0.5"/>
        </svg>
        <span class="text-xs font-medium text-neutral-500 hidden sm:inline">Google Calendar</span>
        <span class="text-xs font-medium text-neutral-500 sm:hidden">Calendar</span>
      </div>

      <div class="w-px h-4 bg-neutral-200"></div>

      <!-- Trust badges -->
      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">GDPR</span>
      </div>
      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">SSL</span>
      </div>
      <div class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-xs font-medium text-neutral-500">{locale === 'ro' ? 'Date UE' : 'EU Data'}</span>
      </div>
    </div>

  </div>
</section>

<!-- ============================================ -->
<!-- SECTION 3: CAPABILITIES (White bg)           -->
<!-- ============================================ -->
<section class="py-12 md:py-20 lg:py-28 bg-white">
  <div class="container-lg">
    <!-- Header -->
    <div class="text-center mb-8 md:mb-16 px-4 md:px-0">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-neutral-750 mb-3 md:mb-4">
        {sc.capabilities.title}
      </h2>
      <p class="text-base md:text-lg text-neutral-600 max-w-2xl mx-auto leading-relaxed">
        {sc.capabilities.lead}
      </p>
    </div>

    <!-- Dynamic swipe indicator (mobile only) -->
    <div class="flex md:hidden items-center justify-center gap-2 text-xs text-neutral-400 mb-3 px-4" data-scroll-hint>
      <svg class="w-4 h-4 transition-opacity duration-300 opacity-0" data-arrow-left fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
      <span data-hint-text>{sc.capabilities.swipeHint}</span>
      <svg class="w-4 h-4 animate-pulse transition-opacity duration-300" data-arrow-right fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </div>

    <!-- 6 Cards - Mobile scroll / Desktop grid -->
    <div class="flex md:grid md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 overflow-x-auto md:overflow-visible pb-4 md:pb-0 snap-x snap-mandatory scrollbar-hide -mx-4 px-4 md:mx-0 md:px-0" data-scroll-container>
      {sc.capabilities.items.map((item: { icon: string; title: string; description: string }) => (
        <div class="group flex-shrink-0 w-[85vw] sm:w-[70vw] md:w-auto bg-neutral-50 p-5 md:p-6 lg:p-8 border border-neutral-100 hover:shadow-lg hover:border-primary-200/50 transition-all duration-300 snap-center" style="border-radius: 16px;">
          <!-- Icon -->
          <div class="w-11 h-11 md:w-14 md:h-14 rounded-xl bg-neutral-100 flex items-center justify-center mb-4 md:mb-6 transition-all duration-300">
            {item.icon === 'phone' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
            )}
            {item.icon === 'intent' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11.25l-3-3m0 0l-3 3m3-3v7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            )}
            {item.icon === 'collect' && (
              <svg class="w-5 h-5 md:w-7 md:h-7 text-neutral-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m8.9-4.414c.376.023.75.05 1.124.08 1.131.094 1.976 1.057 1.976 2.192V16.5A2.25 2.25 0 0118 18.75h-2.25m-7.5-10.5H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V18.75m-7.5-10.5h6.375c.621 0 1.125.504 1.125 1.125v9.375m-8.25-3l1.5 1.5 3-3.75" />
              </svg>
            )}
