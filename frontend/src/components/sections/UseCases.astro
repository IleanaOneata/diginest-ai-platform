      <!-- Dynamic swipe indicator (mobile only) -->
      <div class="flex md:hidden items-center justify-center gap-2 text-sm text-neutral-500 mb-4" data-scroll-hint>
        <svg class="w-4 h-4 transition-opacity duration-300 opacity-0" data-arrow-left fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        <span data-hint-text>{locale === 'ro' ? 'Glisează pentru mai multe' : 'Swipe for more'}</span>
        <svg class="w-4 h-4 animate-pulse transition-opacity duration-300" data-arrow-right fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </div>

      <!-- Scrollable container on mobile, grid on desktop -->
      <div class="flex md:grid md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 lg:gap-8 overflow-x-auto md:overflow-visible pb-4 md:pb-0 snap-x snap-mandatory scrollbar-hide -mx-4 px-4 md:mx-0 md:px-0" data-scroll-container>
        {t.useCases.map((useCase, index) => (
          <div
            class="group flex-shrink-0 w-[85vw] sm:w-[70vw] md:w-auto bg-white p-5 md:p-6 shadow-soft hover:shadow-medium transition-all duration-300 border border-neutral-100 hover:border-primary-200 snap-center"
