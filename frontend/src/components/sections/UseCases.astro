<style>
  /* Hide scrollbar but keep functionality */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Active scroll indicator */
  .scroll-indicator.active {
    background: linear-gradient(90deg, #16B6C9 0%, #4F7CF3 50%, #7C3AED 100%);
    width: 1rem;
  }
</style>

<script>
  // Update scroll indicators and dynamic arrows based on scroll position
  (function() {
    function init() {
      const container = document.querySelector('[data-scroll-container]') as HTMLElement | null;
      const indicators = document.querySelectorAll('.scroll-indicator');
      const hint = document.querySelector('[data-scroll-hint]') as HTMLElement | null;

      if (!container) return;

      const arrowLeft = hint?.querySelector('[data-arrow-left]') as HTMLElement | null;
      const arrowRight = hint?.querySelector('[data-arrow-right]') as HTMLElement | null;

      function updateState() {
        if (!container) return;
        const { scrollLeft, scrollWidth, clientWidth } = container;
        const cardWidth = container.querySelector('div')?.offsetWidth || 300;
        const gap = 16;
        const activeIndex = Math.round(scrollLeft / (cardWidth + gap));

        // Update dot indicators
        indicators.forEach((indicator, index) => {
          indicator.classList.toggle('active', index === activeIndex);
        });

        // Update arrows
        if (arrowLeft && arrowRight) {
          const threshold = 10;
          const atStart = scrollLeft <= threshold;
          const atEnd = scrollLeft + clientWidth >= scrollWidth - threshold;

          arrowLeft.style.opacity = atStart ? '0' : '1';
          arrowLeft.classList.toggle('animate-pulse', !atStart);
          arrowRight.style.opacity = atEnd ? '0' : '1';
          arrowRight.classList.toggle('animate-pulse', !atEnd);
        }
      }

      container.addEventListener('scroll', updateState, { passive: true });
      updateState();
      window.addEventListener('load', updateState);
    }

    document.addEventListener('DOMContentLoaded', init);
    document.addEventListener('astro:page-load', init);
  })();
</script>
