---
/**
 * Services Section Component
 *
 * Displays the three main service offerings
 */

import { getTranslations, type Locale, buildLocalePath } from '@i18n/index';
import Button from '@components/common/Button.astro';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);

const services = [
  {
    icon: 'automation',
    title: t.services.automation.title,
    description: t.services.automation.description,
    href: buildLocalePath(locale === 'ro' ? '/servicii/automatizare-procese/' : '/services/process-automation/', locale),
    features: locale === 'ro'
      ? ['Automatizare workflow-uri', 'Procesare documente', 'Integrare sisteme']
      : ['Workflow automation', 'Document processing', 'System integration'],
  },
  {
    icon: 'chat',
    title: t.services.conversational.title,
    description: t.services.conversational.description,
    href: buildLocalePath(locale === 'ro' ? '/servicii/agenti-conversationali/' : '/services/conversational-agents/', locale),
    features: locale === 'ro'
      ? ['Chatboți inteligenți', 'Asistenți virtuali', 'Suport 24/7']
      : ['Intelligent chatbots', 'Virtual assistants', '24/7 support'],
  },
  {
    icon: 'integration',
    title: t.services.integrations.title,
    description: t.services.integrations.description,
    href: buildLocalePath(locale === 'ro' ? '/servicii/integrari-ai/' : '/services/ai-integrations/', locale),
    features: locale === 'ro'
      ? ['Conectare CRM/ERP', 'API-uri custom', 'Migrare date']
      : ['CRM/ERP connection', 'Custom APIs', 'Data migration'],
  },
];

const icons = {
  automation: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
  </svg>`,
  chat: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
  </svg>`,
  integration: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
  </svg>`,
};
---

<section id="services" class="pt-10 pb-16 md:pt-14 md:pb-24 bg-white">
  <div class="container-lg">
    <!-- Section header -->
    <div class="text-center max-w-2xl mx-auto mb-12 md:mb-16">
      <h2 class="text-heading-lg md:text-display text-neutral-900 mb-4">
        {t.services.title}
      </h2>
      <p class="text-body-lg text-neutral-600">
        {locale === 'ro'
          ? 'Soluții AI personalizate pentru nevoile specifice ale afacerii tale'
          : 'Custom AI solutions for your business specific needs'}
      </p>
    </div>

    <!-- Swipe hint (mobile only) -->
    <div class="flex md:hidden items-center justify-center gap-2 text-xs text-neutral-400 mb-3">
      <svg class="w-4 h-4 animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <span>{locale === 'ro' ? 'Glisează pentru mai multe' : 'Swipe for more'}</span>
    </div>

    <!-- Services grid (desktop) / horizontal scroll (mobile) -->
    <div class="flex md:grid md:grid-cols-3 gap-6 md:gap-8 overflow-x-auto md:overflow-visible
                pb-4 md:pb-0 snap-x snap-mandatory scrollbar-hide
                -mx-4 px-4 md:mx-0 md:px-0">
      {services.map((service, index) => (
        <article
          class="group card-interactive p-6 md:p-8 flex flex-col
                 flex-shrink-0 w-[85vw] md:w-auto snap-center"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Icon -->
          <div class="w-14 h-14 md:w-16 md:h-16 bg-primary-100 rounded-2xl flex items-center justify-center text-primary-600 mb-4 md:mb-6 group-hover:bg-primary-600 group-hover:text-white transition-colors">
            <Fragment set:html={icons[service.icon as keyof typeof icons]} />
          </div>

          <!-- Content -->
          <h3 class="text-heading-sm text-neutral-900 mb-2 md:mb-3">
            {service.title}
          </h3>
          <p class="text-sm md:text-base text-neutral-600 mb-4 md:mb-6 flex-1">
            {service.description}
          </p>

          <!-- Features list -->
          <ul class="space-y-2 mb-4 md:mb-6">
            {service.features.map((feature) => (
              <li class="flex items-center gap-2 text-sm text-neutral-600">
                <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>

          <!-- Link -->
          <a
            href={service.href}
            class="inline-flex items-center gap-2 text-primary-600 font-medium hover:gap-3 transition-all"
          >
            {locale === 'ro' ? 'Află mai multe' : 'Learn more'}
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>
