<script>
  (function() {
    function initScrollHints() {
      const sections = document.querySelectorAll('[data-scroll-hint]');
      sections.forEach((hint) => {
        const container = hint.parentElement?.querySelector('[data-scroll-container]') as HTMLElement | null;
        if (!container) return;

        const arrowLeft = hint.querySelector('[data-arrow-left]') as HTMLElement;
        const arrowRight = hint.querySelector('[data-arrow-right]') as HTMLElement;

        function updateArrows() {
          if (!container || !arrowLeft || !arrowRight) return;
          const { scrollLeft, scrollWidth, clientWidth } = container;
          const threshold = 10;
          const atStart = scrollLeft <= threshold;
          const atEnd = scrollLeft + clientWidth >= scrollWidth - threshold;

          arrowLeft.style.opacity = atStart ? '0' : '1';
          arrowLeft.classList.toggle('animate-pulse', !atStart);
          arrowRight.style.opacity = atEnd ? '0' : '1';
          arrowRight.classList.toggle('animate-pulse', !atEnd);
        }

        container.addEventListener('scroll', updateArrows, { passive: true });
        updateArrows();
        // Re-check after images/fonts load
        window.addEventListener('load', updateArrows);
      });
    }

    document.addEventListener('DOMContentLoaded', initScrollHints);
    document.addEventListener('astro:page-load', initScrollHints);
  })();
</script>
