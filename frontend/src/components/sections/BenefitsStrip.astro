---
/**
 * Benefits Strip - Visual Impact Section
 *
 * Locație: Imediat sub Hero
 * Scop: Impact vizual instant - vizitatorii înțeleg beneficiile în 2 secunde
 *
 * Design: Strip orizontal de carduri, scanabil, minimal text
 * Vezi docs/STRATEGY.md secțiunea 7.1
 */

import { type Locale } from '@i18n/index';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const content = {
  ro: {
    benefits: [
      {
        icon: 'clock',
        title: 'Disponibil 24/7',
        description: 'Clienții tăi primesc răspuns oricând, chiar și la 3 noaptea',
      },
      {
        icon: 'phone',
        title: 'Zero apeluri pierdute',
        description: 'Fiecare apel e preluat, fiecare oportunitate e capturată',
      },
      {
        icon: 'zap',
        title: 'Răspuns instant',
        description: 'Sub 1 secundă timp de răspuns, fără "vă rog așteptați"',
      },
      {
        icon: 'smile',
        title: 'Echipă relaxată',
        description: 'Recepția se ocupă de ce contează, nu de întrebări repetitive',
      },
      {
        icon: 'target',
        title: 'Experiență consistentă',
        description: 'Același nivel de profesionalism, de fiecare dată',
      },
      {
        icon: 'trending',
        title: 'Mai multe conversii',
        description: 'Clienții care primesc răspuns rapid devin clienți fideli',
      },
    ],
  },
  en: {
    benefits: [
      {
        icon: 'clock',
        title: 'Available 24/7',
        description: 'Your customers get answers anytime, even at 3 AM',
      },
      {
        icon: 'phone',
        title: 'Zero missed calls',
        description: 'Every call answered, every opportunity captured',
      },
      {
        icon: 'zap',
        title: 'Instant response',
        description: 'Under 1 second response time, no "please hold"',
      },
      {
        icon: 'smile',
        title: 'Relaxed team',
        description: 'Your front desk focuses on what matters, not repetitive questions',
      },
      {
        icon: 'target',
        title: 'Consistent experience',
        description: 'Same level of professionalism, every single time',
      },
      {
        icon: 'trending',
        title: 'More conversions',
        description: 'Customers who get quick answers become loyal customers',
      },
    ],
  },
};

const t = content[locale] || content.ro;

// SVG icons inline pentru performanță
const icons: Record<string, string> = {
  clock: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  phone: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />`,
  zap: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />`,
  smile: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  target: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  trending: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />`,
};
---

<section class="py-8 md:py-12 lg:py-16 bg-white border-b border-neutral-100">
  <div class="container-lg">
    <!-- Horizontal scroll on mobile, grid on tablet+ -->
    <div class="flex md:grid md:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-6 lg:gap-8 overflow-x-auto md:overflow-visible pb-2 md:pb-0 snap-x snap-mandatory scrollbar-hide -mx-4 px-4 md:mx-0 md:px-0">
      {t.benefits.map((benefit, index) => (
        <div
          class="group flex-shrink-0 w-[140px] sm:w-[160px] md:w-auto text-center p-3 md:p-4 hover:bg-neutral-50 transition-colors duration-300 snap-center"
          style={`border-radius: 16px; animation-delay: ${index * 100}ms`}
        >
          <!-- Icon -->
          <div class="inline-flex items-center justify-center w-10 h-10 md:w-12 md:h-12 mb-2 md:mb-3 rounded-xl bg-neutral-100 text-primary-600 group-hover:scale-110 transition-transform duration-300">
            <svg
              class="w-5 h-5 md:w-6 md:h-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              set:html={icons[benefit.icon]}
            />
          </div>

          <!-- Title -->
          <h3 class="font-bold text-neutral-750 text-xs md:text-sm lg:text-base mb-1">
            {benefit.title}
          </h3>

          <!-- Description - hidden on mobile, shown on tablet+ -->
          <p class="hidden md:block text-xs lg:text-sm text-neutral-500 leading-relaxed">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
