---
/**
 * Button Component
 * GENERATIVA - AI Agents Platform
 *
 * Reusable button/link component with multiple variants
 * Updated with GENERATIVA brand colors (cyanâ†’purple gradient)
 */

interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'gradient';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  external?: boolean;
  [key: string]: any; // Allow data-* and other attributes
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
  type = 'button',
  disabled = false,
  external = false,
  ...rest // Capture remaining props (data-*, aria-*, etc.)
} = Astro.props;

// Base classes
const baseClasses = 'inline-flex items-center justify-center gap-2 font-medium rounded-lg transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed';

// Variant classes - Updated for GENERATIVA brand
const variantClasses = {
  primary: 'bg-primary-400 text-neutral-900 hover:bg-primary-500 focus-visible:ring-primary-400 active:bg-primary-600 shadow-sm hover:shadow-md',
  secondary: 'bg-neutral-100 text-neutral-900 hover:bg-neutral-200 focus-visible:ring-neutral-400 active:bg-neutral-300',
  outline: 'border-2 border-primary-400 text-primary-500 hover:bg-primary-50 focus-visible:ring-primary-400 active:bg-primary-100',
  ghost: 'text-neutral-600 hover:bg-neutral-100 hover:text-neutral-900 focus-visible:ring-neutral-400 active:bg-neutral-200',
  gradient: 'bg-gradient-to-r from-primary-400 to-accent-600 text-white hover:from-primary-500 hover:to-accent-700 focus-visible:ring-accent-500 shadow-md hover:shadow-lg',
};

// Size classes
const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const classes = [
  baseClasses,
  variantClasses[variant],
  sizeClasses[size],
  className,
].join(' ');

// External link attributes
const externalAttrs = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

{href ? (
  <a href={href} class={classes} {...externalAttrs} {...rest}>
    <slot />
  </a>
) : (
  <button type={type} class={classes} disabled={disabled} {...rest}>
    <slot />
  </button>
)}
