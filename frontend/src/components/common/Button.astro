---
/**
 * Button Component
 * GENERATIVA — AI Agents Platform
 *
 * Refined button system:
 * - Primary/Gradient: Brand gradient, white text, 12px radius, subtle shadow
 * - Secondary: White bg, 1px neutral border, dark text
 * - Outline: Brand border, brand text
 * - Ghost: Transparent, subtle hover
 */

interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'gradient';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  external?: boolean;
  [key: string]: any;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
  type = 'button',
  disabled = false,
  external = false,
  ...rest
} = Astro.props;

// Base classes
const baseClasses = 'inline-flex items-center justify-center gap-2 font-semibold transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed';

// Variant classes
const variantClasses = {
  primary: 'text-white focus-visible:ring-accent-500 shadow-soft hover:brightness-110',
  secondary: 'bg-white text-neutral-900 border border-neutral-200 hover:bg-neutral-50 focus-visible:ring-neutral-400',
  outline: 'border border-accent-500 text-accent-600 hover:bg-accent-50 focus-visible:ring-accent-500',
  ghost: 'text-neutral-600 hover:bg-neutral-100 hover:text-neutral-900 focus-visible:ring-neutral-400',
  gradient: 'text-white focus-visible:ring-accent-500 shadow-soft hover:brightness-110',
};

// Size classes
const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const classes = [
  baseClasses,
  variantClasses[variant],
  sizeClasses[size],
  className,
].join(' ');

// External link attributes
const externalAttrs = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};

// Amber background for CTA variants
const isCtaVariant = variant === 'primary' || variant === 'gradient';
const ctaStyle = isCtaVariant
  ? 'border-radius: 12px; background: #F59E0B;'
  : 'border-radius: 12px;';
---

{href ? (
  <a href={href} class={classes} style={ctaStyle} {...externalAttrs} {...rest}>
    <slot />
  </a>
) : (
  <button type={type} class={classes} style={ctaStyle} disabled={disabled} {...rest}>
    <slot />
  </button>
)}

<style>
  .hover\:brightness-110:hover {
    filter: brightness(1.08);
  }

  /* Amber CTA hover — darken to #D97706 */
  a[style*="background: #F59E0B"]:hover,
  button[style*="background: #F59E0B"]:hover {
    background: #D97706 !important;
  }
</style>
