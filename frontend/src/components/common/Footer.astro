---
/**
 * Footer Component
 *
 * Site footer with navigation links, contact info, and legal
 */

import { getTranslations, type Locale, buildLocalePath } from '@i18n/index';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
const currentYear = new Date().getFullYear();

// Footer navigation
const footerNav = {
  company: [
    { label: t.footer.company.about, href: buildLocalePath(locale === 'ro' ? '/despre/' : '/about/', locale) },
    { label: t.footer.company.contact, href: buildLocalePath('/contact/', locale) },
  ],
  services: [
    { label: t.footer.services.automation, href: buildLocalePath(locale === 'ro' ? '/servicii/automatizare-procese/' : '/services/process-automation/', locale) },
    { label: t.footer.services.conversational, href: buildLocalePath(locale === 'ro' ? '/servicii/agenti-conversationali/' : '/services/conversational-agents/', locale) },
    { label: t.footer.services.integrations, href: buildLocalePath(locale === 'ro' ? '/servicii/integrari-ai/' : '/services/ai-integrations/', locale) },
  ],
  resources: [
    { label: t.footer.resources.blog, href: buildLocalePath('/blog/', locale) },
    { label: t.footer.resources.caseStudies, href: buildLocalePath(locale === 'ro' ? '/studii-caz/' : '/case-studies/', locale) },
  ],
  legal: [
    { label: t.footer.legal.privacy, href: buildLocalePath(locale === 'ro' ? '/politica-confidentialitate/' : '/privacy-policy/', locale) },
    { label: t.footer.legal.terms, href: buildLocalePath(locale === 'ro' ? '/termeni-conditii/' : '/terms-conditions/', locale) },
  ],
};

// Social links
const socialLinks = [
  { name: 'LinkedIn', href: 'https://linkedin.com/company/diginest-ai', icon: 'linkedin' },
  { name: 'Facebook', href: 'https://facebook.com/diginestai', icon: 'facebook' },
  { name: 'Instagram', href: 'https://instagram.com/diginestai', icon: 'instagram' },
];
---

<footer class="bg-neutral-900 text-neutral-300">
  <div class="container-lg py-12 lg:py-16">
    <!-- Main footer content -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand column -->
      <div class="col-span-2 md:col-span-4 lg:col-span-1 lg:pr-8">
        <a href={buildLocalePath('/', locale)} class="inline-flex items-center gap-2 text-xl font-bold text-white mb-4">
          <svg class="w-8 h-8" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <linearGradient id="footer-logo-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#3b82f6" />
                <stop offset="100%" style="stop-color:#06b6d4" />
              </linearGradient>
            </defs>
            <path
              d="M16 2L4 9v14l12 7 12-7V9L16 2zm0 4l8 4.67v9.33L16 25l-8-5V10.67L16 6z"
              fill="url(#footer-logo-gradient)"
            />
            <circle cx="16" cy="16" r="4" fill="url(#footer-logo-gradient)" />
          </svg>
          Diginest AI
        </a>
        <p class="text-neutral-400 text-sm mb-6">
          {t.site.tagline}
        </p>

        <!-- Social links -->
        <div class="flex gap-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center rounded-lg bg-neutral-800 text-neutral-400 hover:bg-neutral-700 hover:text-white transition-colors"
              aria-label={social.name}
            >
              {social.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {social.icon === 'facebook' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {social.icon === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Company links -->
      <div>
        <h3 class="text-white font-semibold mb-4">{t.footer.company.title}</h3>
        <ul class="space-y-3">
          {footerNav.company.map((item) => (
            <li>
              <a href={item.href} class="text-neutral-400 hover:text-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services links -->
      <div>
        <h3 class="text-white font-semibold mb-4">{t.footer.services.title}</h3>
        <ul class="space-y-3">
          {footerNav.services.map((item) => (
            <li>
              <a href={item.href} class="text-neutral-400 hover:text-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources links -->
      <div>
        <h3 class="text-white font-semibold mb-4">{t.footer.resources.title}</h3>
        <ul class="space-y-3">
          {footerNav.resources.map((item) => (
            <li>
              <a href={item.href} class="text-neutral-400 hover:text-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal links -->
      <div>
        <h3 class="text-white font-semibold mb-4">{t.footer.legal.title}</h3>
        <ul class="space-y-3">
          {footerNav.legal.map((item) => (
            <li>
              <a href={item.href} class="text-neutral-400 hover:text-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-neutral-800">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-neutral-500 text-sm">
          &copy; {currentYear} Diginest AI. {t.footer.copyright}
        </p>
        <p class="text-neutral-600 text-sm">
          <!-- TODO: Update with real company info -->
          CUI: RO12345678 | J40/1234/2025
        </p>
      </div>
    </div>
  </div>
</footer>
