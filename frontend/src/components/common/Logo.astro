---
/**
 * Logo Component - GENERATIVA
 *
 * Uses the PNG logo image (AI-generated concept with 3D G letter,
 * gradient cyanâ†’purple, network nodes overlay).
 *
 * Variants:
 * - default: Logo image + gradient text (for light backgrounds)
 * - white: Logo image + white text (for dark backgrounds)
 * - dark: Logo image + dark text
 *
 * The PNG logo is on white background, so on dark sections we rely
 * on the image being small enough that the white blends naturally,
 * or we use CSS mix-blend-mode for better integration.
 */

interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  showText?: boolean;
  variant?: 'default' | 'white' | 'dark';
  class?: string;
}

const {
  size = 'md',
  showText = true,
  variant = 'default',
  class: className = ''
} = Astro.props;

// Size configurations - icon sizes and responsive image sources
const sizes = {
  sm: { icon: 'w-8 h-8', text: 'text-lg', gap: 'gap-2', img: '/images/generativa-logo-200.png' },
  md: { icon: 'w-10 h-10', text: 'text-xl', gap: 'gap-2.5', img: '/images/generativa-logo-200.png' },
  lg: { icon: 'w-12 h-12', text: 'text-2xl', gap: 'gap-3', img: '/images/generativa-logo-512.png' },
  xl: { icon: 'w-16 h-16', text: 'text-3xl', gap: 'gap-4', img: '/images/generativa-logo-512.png' },
};

const textColors = {
  default: 'text-neutral-900',
  white: 'text-white',
  dark: 'text-neutral-900',
};

const config = sizes[size];
const textColor = textColors[variant];
---

<div class:list={["flex items-center", config.gap, className]}>
  <!-- Logo Icon - PNG image -->
  <img
    src={config.img}
    alt="GENERATIVA logo"
    class:list={[
      config.icon,
      "object-contain rounded-lg",
      variant === 'white' ? 'brightness-110' : ''
    ]}
    width="200"
    height="200"
    loading="eager"
    decoding="async"
  />

  <!-- Text: GENERATIVA -->
  {showText && (
    <span class:list={[
      "font-bold tracking-wide",
      config.text,
      textColor
    ]}>
      {variant === 'white' ? (
        <span class="text-white">GENERATIVA</span>
      ) : (
        <span class="bg-gradient-to-r from-primary-400 via-indigo-500 to-accent-600 bg-clip-text text-transparent">
          GENERATIVA
        </span>
      )}
    </span>
  )}
</div>
