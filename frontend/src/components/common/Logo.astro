---
/**
 * Logo Component — GENERATIVA
 *
 * Inline SVG for brand protection and reliable font rendering.
 * Two variants: black (light bg) and white (dark bg).
 * Font "Prompt" is loaded globally in BaseLayout — SVG inherits it.
 * No gradients, shadows, filters, or CSS effects applied.
 * Minimum width: 120px. Clear space = height of "G".
 */

interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  showText?: boolean;
  variant?: 'default' | 'white' | 'dark';
  class?: string;
}

const {
  size = 'md',
  showText = true,
  variant = 'default',
  class: className = ''
} = Astro.props;

// Size configurations
const sizes = {
  sm: { height: 'h-7', minWidth: '140px' },
  md: { height: 'h-8 lg:h-9', minWidth: '170px' },
  lg: { height: 'h-12', minWidth: '240px' },
  xl: { height: 'h-16', minWidth: '320px' },
};

const config = sizes[size];

// Color tokens per variant
const isWhite = variant === 'white';
const wordmarkFill = isWhite ? 'white' : '#0B0B0B';
const subtitleFill = isWhite ? '#8A8A8A' : '#666666';
const strokeColor = isWhite ? 'white' : '#0B0B0B';
const knobFill = isWhite ? 'white' : '#0B0B0B';
---

<div class:list={["flex items-center flex-shrink-0", className]} role="img" aria-label="GENERATIVA — AI Automation">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 405 68"
    class:list={[config.height, "w-auto"]}
    style={`min-width: ${config.minWidth};`}
    aria-hidden="true"
    focusable="false"
    preserveAspectRatio="xMinYMid meet"
  >
    <!-- Wordmark -->
    <text
      x="0"
      y="38"
      font-size="46"
      font-family="'Prompt', system-ui, sans-serif"
      font-weight="700"
      letter-spacing="0.03em"
      fill={wordmarkFill}
    >GENERATIVA</text>

    <!-- Subtitle -->
    <text
      x="1"
      y="58"
      font-size="14"
      font-family="'Prompt', system-ui, sans-serif"
      font-weight="500"
      letter-spacing="0.22em"
      fill={subtitleFill}
    >AI AUTOMATION</text>

    <!-- Toggle symbol -->
    <g transform="translate(325, 6)">
      <rect x="0" y="0" width="62" height="34" rx="17" fill="none" stroke={strokeColor} stroke-width="2.5" />
      <circle cx="45" cy="17" r="10" fill={knobFill} />
    </g>
  </svg>
</div>
