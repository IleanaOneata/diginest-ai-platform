---
/**
 * Logo Component - GENERATIVA
 *
 * Uses the cropped PNG logo (just the G letter with network nodes,
 * no text underneath). Text "GENERATIVA" is rendered by the component.
 *
 * Variants:
 * - default: Logo G + gradient text (for light backgrounds)
 * - white: Logo G + white text (for dark backgrounds)
 * - dark: Logo G + dark text
 */

interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  showText?: boolean;
  variant?: 'default' | 'white' | 'dark';
  class?: string;
}

const {
  size = 'md',
  showText = true,
  variant = 'default',
  class: className = ''
} = Astro.props;

// Size configurations â€” icons are bigger now for visibility
const sizes = {
  sm: { icon: 'w-9 h-9', text: 'text-lg', gap: 'gap-2' },
  md: { icon: 'w-11 h-11', text: 'text-xl', gap: 'gap-2.5' },
  lg: { icon: 'w-14 h-14', text: 'text-2xl', gap: 'gap-3' },
  xl: { icon: 'w-20 h-20', text: 'text-3xl', gap: 'gap-4' },
};

const textColors = {
  default: 'text-neutral-900',
  white: 'text-white',
  dark: 'text-neutral-900',
};

const config = sizes[size];
const textColor = textColors[variant];
---

<div class:list={["flex items-center", config.gap, className]}>
  <!-- Logo Icon - Cropped G letter PNG -->
  <img
    src="/images/generativa-g-512.png"
    alt="GENERATIVA"
    class:list={[
      config.icon,
      "object-contain"
    ]}
    width="512"
    height="512"
    loading="eager"
    decoding="async"
  />

  <!-- Text: GENERATIVA -->
  {showText && (
    <span class:list={[
      "font-bold tracking-wide",
      config.text,
      textColor
    ]}>
      {variant === 'white' ? (
        <span class="text-white">GENERATIVA</span>
      ) : (
        <span class="bg-gradient-to-r from-primary-400 via-indigo-500 to-accent-600 bg-clip-text text-transparent">
          GENERATIVA
        </span>
      )}
    </span>
  )}
</div>
