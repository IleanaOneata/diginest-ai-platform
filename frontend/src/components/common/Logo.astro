---
/**
 * Logo Component — GENERATIVA
 *
 * Inline SVG for brand protection and reliable font rendering.
 * Two variants: black (light bg) and white (dark bg).
 * Font "Prompt" is loaded globally in BaseLayout — SVG inherits it.
 * No gradients, shadows, filters, or CSS effects applied.
 * Minimum width: 120px. Clear space = height of "G".
 */

interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  showText?: boolean;
  variant?: 'default' | 'white' | 'dark';
  class?: string;
}

const {
  size = 'md',
  showText = true,
  variant = 'default',
  class: className = ''
} = Astro.props;

// Size configurations — minimum 120px width enforced
const sizes = {
  sm: { height: 'h-8', minWidth: '150px' },
  md: { height: 'h-8 lg:h-9', minWidth: '160px' },
  lg: { height: 'h-12', minWidth: '220px' },
  xl: { height: 'h-16', minWidth: '300px' },
};

const config = sizes[size];

// Color tokens per variant
const isWhite = variant === 'white';
const wordmarkFill = isWhite ? 'white' : '#0B0B0B';
const subtitleFill = isWhite ? '#8A8A8A' : '#666666';
const strokeColor = isWhite ? 'white' : '#0B0B0B';
const knobFill = isWhite ? 'white' : '#0B0B0B';
---

<div class:list={["flex items-center flex-shrink-0", className]} role="img" aria-label="GENERATIVA — AI Automation">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="-2 -2 400 72"
    class:list={[config.height, "w-auto"]}
    style={`min-width: ${config.minWidth};`}
    aria-hidden="true"
    focusable="false"
  >
    <!-- Wordmark -->
    <text
      x="0"
      y="38.4"
      font-size="48"
      font-family="'Prompt', sans-serif"
      font-weight="700"
      letter-spacing="0.04em"
      fill={wordmarkFill}
    >GENERATIVA</text>

    <!-- Subtitle -->
    <text
      x="0"
      y="59.04"
      font-size="16.8"
      font-family="'Prompt', sans-serif"
      font-weight="500"
      letter-spacing="0.2em"
      fill={subtitleFill}
    >AI AUTOMATION</text>

    <!-- Toggle symbol -->
    <g transform="translate(322.32, 7.2)">
      <rect x="0" y="0" width="64.8" height="36" rx="18" fill="none" stroke={strokeColor} stroke-width="2.88" />
      <circle cx="46.8" cy="18" r="10.8" fill={knobFill} />
    </g>
  </svg>
</div>
