---
/**
 * Logo Component — GENERATIVA
 *
 * Uses native SVG <text> elements with Prompt font for perfect kerning.
 * Font Prompt is loaded in BaseLayout.astro (weights 500, 600, 700).
 * Browser handles letter spacing natively — no manual path coordinates.
 * Two variants: black (light bg) and white (dark bg).
 */

interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  showText?: boolean;
  variant?: 'default' | 'white' | 'dark';
  class?: string;
}

const {
  size = 'md',
  showText = true,
  variant = 'default',
  class: className = ''
} = Astro.props;

// Size configurations
const sizes = {
  sm: { height: 'h-8', minWidth: '150px' },
  md: { height: 'h-9 lg:h-10', minWidth: '180px' },
  lg: { height: 'h-12', minWidth: '240px' },
  xl: { height: 'h-16', minWidth: '320px' },
};

const config = sizes[size];

// Color tokens per variant — dark variant uses #263244 (neutral-750) to match page headings
const isWhite = variant === 'white';
const fillColor = isWhite ? 'white' : '#263244';
const subtitleFill = isWhite ? '#8A8A8A' : '#7A8694';
const strokeColor = isWhite ? 'white' : '#263244';
const knobFill = isWhite ? 'white' : '#263244';
---

<div class:list={["flex items-center flex-shrink-0", className]} role="img" aria-label="GENERATIVA — AI Automation">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="-2 -2 392 72"
    class:list={[config.height, "w-auto"]}
    style={`min-width: ${config.minWidth};`}
    aria-hidden="true"
    focusable="false"
    preserveAspectRatio="xMinYMid meet"
  >
    <!-- Wordmark: GENERATIVA — Prompt Bold 700 -->
    <text
      x="0"
      y="38"
      font-family="'Prompt', sans-serif"
      font-weight="700"
      font-size="48"
      letter-spacing="0.04em"
      fill={fillColor}
    >GENERATIVA</text>

    <!-- Subtitle: AI AUTOMATION — Prompt Medium 500 -->
    <text
      x="0"
      y="59"
      font-family="'Prompt', sans-serif"
      font-weight="500"
      font-size="16.8"
      letter-spacing="0.2em"
      fill={subtitleFill}
    >AI AUTOMATION</text>

    <!-- Toggle symbol -->
    <g transform="translate(322, 7)">
      <rect x="0" y="0" width="64" height="35" rx="17.5" fill="none" stroke={strokeColor} stroke-width="2.5" />
      <circle cx="46" cy="17.5" r="10.5" fill={knobFill} />
    </g>
  </svg>
</div>
