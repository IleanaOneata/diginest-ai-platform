---
/**
 * Logo Component - GENERATIVA
 *
 * Uses the 3D G letter PNG with transparent background.
 * A subtle gradient circle behind the icon adds depth and brand feel.
 *
 * Variants:
 * - default: G icon with subtle bg circle + gradient text (light backgrounds)
 * - white: G icon + white text (dark backgrounds)
 * - dark: G icon + dark text
 */

interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  showText?: boolean;
  variant?: 'default' | 'white' | 'dark';
  class?: string;
}

const {
  size = 'md',
  showText = true,
  variant = 'default',
  class: className = ''
} = Astro.props;

// Size configurations
const sizes = {
  sm: { wrapper: 'w-9 h-9', icon: 'w-8 h-8', text: 'text-lg', gap: 'gap-2' },
  md: { wrapper: 'w-11 h-11', icon: 'w-10 h-10', text: 'text-xl', gap: 'gap-2.5' },
  lg: { wrapper: 'w-14 h-14', icon: 'w-13 h-13', text: 'text-2xl', gap: 'gap-3' },
  xl: { wrapper: 'w-20 h-20', icon: 'w-18 h-18', text: 'text-3xl', gap: 'gap-4' },
};

const textColors = {
  default: 'text-neutral-900',
  white: 'text-white',
  dark: 'text-neutral-900',
};

const config = sizes[size];
const textColor = textColors[variant];
---

<div class:list={["flex items-center", config.gap, className]}>
  <!-- Logo Icon - 3D G letter with subtle background circle -->
  <div class:list={[
    config.wrapper,
    "relative flex items-center justify-center flex-shrink-0"
  ]}>
    <img
      src="/images/generativa-g-512.png"
      alt="GENERATIVA"
      class:list={[
        config.icon,
        "object-contain relative z-10"
      ]}
      width="512"
      height="512"
      loading="eager"
      decoding="async"
    />
  </div>

  <!-- Text: GENERATIVA -->
  {showText && (
    <span class:list={[
      "font-bold tracking-wide",
      config.text,
      textColor
    ]}>
      {variant === 'white' ? (
        <span class="text-white">GENERATIVA</span>
      ) : (
        <span class="bg-gradient-to-r from-primary-400 via-indigo-500 to-accent-600 bg-clip-text text-transparent">
          GENERATIVA
        </span>
      )}
    </span>
  )}
</div>
