---
/**
 * Romanian About Page
 *
 * SEO optimized about page for GENERATIVA
 * Target keywords: agenți AI România, automatizare business, AI pentru afaceri
 *
 * Schema.org: AboutPage + BreadcrumbList (@graph pattern)
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import AboutPage from '@components/sections/AboutPage.astro';
import { getTranslations } from '@i18n/index';

const locale = 'ro';
const t = getTranslations(locale);

const title = t.about.meta.title;
const description = t.about.meta.description;

const siteUrl = 'https://generativa.ro';

// Schema.org @graph with AboutPage + BreadcrumbList
const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    // AboutPage schema
    {
      '@type': 'AboutPage',
      '@id': `${siteUrl}/ro/despre/#webpage`,
      url: `${siteUrl}/ro/despre/`,
      name: title,
      description: description,
      inLanguage: 'ro-RO',
      isPartOf: {
        '@id': `${siteUrl}/#website`,
      },
      about: {
        '@type': 'Organization',
        '@id': `${siteUrl}/#organization`,
        name: 'GENERATIVA',
        description: t.site.description,
        foundingDate: '2025',
        areaServed: [
          { '@type': 'Country', name: 'Romania' },
          { '@type': 'Country', name: 'European Union' },
        ],
        knowsAbout: [
          'Artificial Intelligence',
          'Process Automation',
          'Conversational AI',
          'AI Agents',
          'Business Automation',
        ],
        slogan: t.site.tagline,
      },
    },
    // BreadcrumbList
    {
      '@type': 'BreadcrumbList',
      '@id': `${siteUrl}/ro/despre/#breadcrumb`,
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Acasa',
          item: `${siteUrl}/ro/`,
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: 'Despre Noi',
        },
      ],
    },
  ],
};
---

<BaseLayout
  title={title}
  description={description}
  locale={locale}
  canonicalUrl="/ro/despre/"
  schema={schema}
>
  <AboutPage locale={locale} />
</BaseLayout>
