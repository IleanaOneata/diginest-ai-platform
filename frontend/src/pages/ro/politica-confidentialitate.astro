---
/**
 * Romanian Privacy Policy Page
 *
 * GDPR-compliant privacy policy for GENERATIVA
 * Includes: Privacy Policy + Cookie Policy
 *
 * Schema.org: WebPage + BreadcrumbList (@graph pattern)
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import PrivacyPolicyPage from '@components/sections/PrivacyPolicyPage.astro';
import { getTranslations } from '@i18n/index';

const locale = 'ro';
const t = getTranslations(locale);

const title = t.privacy.meta.title;
const description = t.privacy.meta.description;

const siteUrl = 'https://diginest-ai-platform.vercel.app';

// Schema.org @graph with WebPage + BreadcrumbList
const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    // WebPage schema
    {
      '@type': 'WebPage',
      '@id': `${siteUrl}/ro/politica-confidentialitate/#webpage`,
      url: `${siteUrl}/ro/politica-confidentialitate/`,
      name: title,
      description: description,
      inLanguage: 'ro-RO',
      isPartOf: {
        '@id': `${siteUrl}/#website`,
      },
      about: {
        '@id': `${siteUrl}/#organization`,
      },
    },
    // BreadcrumbList
    {
      '@type': 'BreadcrumbList',
      '@id': `${siteUrl}/ro/politica-confidentialitate/#breadcrumb`,
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Acasă',
          item: `${siteUrl}/ro/`,
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: 'Politica de Confidențialitate',
        },
      ],
    },
  ],
};
---

<BaseLayout
  title={title}
  description={description}
  locale={locale}
  canonicalUrl="/ro/politica-confidentialitate/"
  schema={schema}
>
  <PrivacyPolicyPage locale={locale} />
</BaseLayout>
