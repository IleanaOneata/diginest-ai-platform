---
/**
 * Romanian Homepage - GENERATIVA
 *
 * Strategie "Demo-First + Storytelling"
 * Flow NOU (vezi docs/STRATEGY.md secțiunea 7.4):
 *
 * 1. HeroInteractive - Demo chat în primele 5 secunde
 * 2. BenefitsStrip - Impact vizual instant (6 beneficii)
 * 3. Services - Ce oferim
 * 4. UseCases - "Ți se pare familiar?" (auto-identificare)
 * 5. IntegrationHub - "Ce se întâmplă în spate" (vizual)
 * 6. ScaleWithConfidence - Statistici cu animație wave (stil Stripe)
 * 7. Benefits - Rezultate concrete
 * 8. Process - Cum funcționează
 * 9. FAQ - Întrebări frecvente
 * 10. CTA - Contact
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import HeroInteractive from '@components/sections/HeroInteractive.astro';
import BenefitsStrip from '@components/sections/BenefitsStrip.astro';
import Services from '@components/sections/Services.astro';
import UseCases from '@components/sections/UseCases.astro';
import IntegrationHub from '@components/sections/IntegrationHub.astro';
import ScaleWithConfidence from '@components/sections/ScaleWithConfidence.astro';
import Benefits from '@components/sections/Benefits.astro';
import Process from '@components/sections/Process.astro';
import FAQ from '@components/sections/FAQ.astro';
import CTA from '@components/sections/CTA.astro';
import { getTranslations } from '@i18n/index';

const locale = 'ro';
const t = getTranslations(locale);

// Page metadata
const title = `${t.site.name} - ${t.site.tagline}`;
const description = t.site.description;

// WebPage schema
const pageSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  '@id': 'https://diginest.ai/ro/#webpage',
  url: 'https://diginest.ai/ro/',
  name: title,
  description: description,
  inLanguage: 'ro-RO',
  isPartOf: {
    '@id': 'https://diginest.ai/#website',
  },
  about: {
    '@id': 'https://diginest.ai/#organization',
  },
};
---

<BaseLayout
  title={title}
  description={description}
  locale={locale}
  canonicalUrl="/ro/"
  schema={pageSchema}
>
  <HeroInteractive locale={locale} />
  <BenefitsStrip locale={locale} />
  <Services locale={locale} />
  <UseCases locale={locale} />
  <IntegrationHub locale={locale} />
  <ScaleWithConfidence locale={locale} />
  <Benefits locale={locale} />
  <Process locale={locale} />
  <FAQ locale={locale} />
  <CTA locale={locale} />
</BaseLayout>
