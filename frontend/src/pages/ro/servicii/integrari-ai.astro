---
/**
 * Romanian AI Integrations Service Page
 *
 * SEO/AEO optimized service page for GENERATIVA
 * Target keywords: integrări AI, integrare AI CRM, integrare AI sisteme business, conectare AI sisteme existente
 *
 * Schema.org: Service + FAQPage + BreadcrumbList + HowTo (@graph pattern)
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import AiIntegrationsPage from '@components/sections/AiIntegrationsPage.astro';
import { getTranslations } from '@i18n/index';

const locale = 'ro';
const t = getTranslations(locale);
const si = t.serviceIntegrations;

const title = si.meta.title;
const description = si.meta.description;

// Site URL for schema references
const siteUrl = 'https://generativa.ro';

// Schema.org @graph with Service + FAQPage + BreadcrumbList + HowTo
const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    // 1. Service schema
    {
      '@type': 'Service',
      '@id': `${siteUrl}/ro/servicii/integrari-ai/#service`,
      name: si.meta.schemaName,
      description: si.meta.schemaDescription,
      provider: {
        '@type': 'Organization',
        '@id': `${siteUrl}/#organization`,
        name: 'GENERATIVA',
      },
      areaServed: {
        '@type': 'Country',
        name: 'Romania',
      },
      serviceType: 'AI Integration Service',
      audience: {
        '@type': 'BusinessAudience',
        audienceType: 'Small and Medium Enterprises',
      },
      hasOfferCatalog: {
        '@type': 'OfferCatalog',
        name: 'Tipuri de integrări AI',
        itemListElement: [
          {
            '@type': 'Offer',
            itemOffered: {
              '@type': 'Service',
              name: 'Integrare AI cu CRM',
            },
          },
          {
            '@type': 'Offer',
            itemOffered: {
              '@type': 'Service',
              name: 'Integrare AI cu Sisteme de Booking',
            },
          },
          {
            '@type': 'Offer',
            itemOffered: {
              '@type': 'Service',
              name: 'Integrare AI cu Platforme de Ticketing',
            },
          },
          {
            '@type': 'Offer',
            itemOffered: {
              '@type': 'Service',
              name: 'Integrare AI cu ERP și Sisteme Interne',
            },
          },
        ],
      },
      offers: {
        '@type': 'Offer',
        description: si.meta.schemaOffer,
        priceCurrency: 'EUR',
      },
    },
    // 2. FAQPage schema
    {
      '@type': 'FAQPage',
      '@id': `${siteUrl}/ro/servicii/integrari-ai/#faq`,
      mainEntity: si.faq.items.map((item: { question: string; answer: string }) => ({
        '@type': 'Question',
        name: item.question,
        acceptedAnswer: {
          '@type': 'Answer',
          text: item.answer,
        },
      })),
    },
    // 3. BreadcrumbList schema
    {
      '@type': 'BreadcrumbList',
      '@id': `${siteUrl}/ro/servicii/integrari-ai/#breadcrumb`,
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Acasa',
          item: `${siteUrl}/ro/`,
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: 'Servicii',
          item: `${siteUrl}/ro/#services`,
        },
        {
          '@type': 'ListItem',
          position: 3,
          name: si.meta.breadcrumbName,
        },
      ],
    },
    // 4. HowTo schema (integration process steps)
    {
      '@type': 'HowTo',
      '@id': `${siteUrl}/ro/servicii/integrari-ai/#howto`,
      name: si.approach.schemaName,
      description: si.approach.schemaDescription,
      step: si.approach.steps.map((step: { title: string; description: string }, index: number) => ({
        '@type': 'HowToStep',
        position: index + 1,
        name: step.title,
        text: step.description,
      })),
    },
  ],
};
---

<BaseLayout
  title={title}
  description={description}
  locale={locale}
  canonicalUrl="/ro/servicii/integrari-ai/"
  schema={schema}
>
  <AiIntegrationsPage locale={locale} />
</BaseLayout>
