---
/**
 * Romanian Conversational Agents Service Page
 *
 * SEO optimized service page for GENERATIVA
 * Target keywords: agenți conversaționali AI, asistenți virtuali, agent vocal AI, chatbot AI România
 *
 * Schema.org: Service + FAQPage + BreadcrumbList + HowTo (@graph pattern)
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import ConversationalAgentsPage from '@components/sections/ConversationalAgentsPage.astro';
import { getTranslations } from '@i18n/index';

const locale = 'ro';
const t = getTranslations(locale);
const sc = t.serviceConversational;

const title = sc.meta.title;
const description = sc.meta.description;

// Site URL for schema references
const siteUrl = 'https://generativa.ro';

// Schema.org @graph with Service + FAQPage + BreadcrumbList + HowTo
const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    // 1. Service schema
    {
      '@type': 'Service',
      '@id': `${siteUrl}/ro/servicii/agenti-conversationali/#service`,
      name: sc.meta.schemaName,
      description: sc.meta.schemaDescription,
      provider: {
        '@type': 'Organization',
        '@id': `${siteUrl}/#organization`,
        name: 'GENERATIVA',
      },
      areaServed: {
        '@type': 'Country',
        name: 'Romania',
      },
      serviceType: 'Conversational AI Agents',
      audience: {
        '@type': 'BusinessAudience',
        audienceType: 'Small and Medium Enterprises',
      },
      hasOfferCatalog: {
        '@type': 'OfferCatalog',
        name: 'Canale de comunicare',
        itemListElement: [
          {
            '@type': 'Offer',
            itemOffered: {
              '@type': 'Service',
              name: 'Agent Vocal AI (Telefon)',
            },
          },
          {
            '@type': 'Offer',
            itemOffered: {
              '@type': 'Service',
              name: 'Agent Chat AI (WhatsApp, Web Chat)',
            },
          },
          {
            '@type': 'Offer',
            itemOffered: {
              '@type': 'Service',
              name: 'Agent Email AI',
            },
          },
        ],
      },
      offers: {
        '@type': 'Offer',
        description: sc.meta.schemaOffer,
        priceCurrency: 'EUR',
      },
    },
    // 2. FAQPage schema
    {
      '@type': 'FAQPage',
      '@id': `${siteUrl}/ro/servicii/agenti-conversationali/#faq`,
      mainEntity: sc.faq.items.map((item: { question: string; answer: string }) => ({
        '@type': 'Question',
        name: item.question,
        acceptedAnswer: {
          '@type': 'Answer',
          text: item.answer,
        },
      })),
    },
    // 3. BreadcrumbList schema
    {
      '@type': 'BreadcrumbList',
      '@id': `${siteUrl}/ro/servicii/agenti-conversationali/#breadcrumb`,
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Acasa',
          item: `${siteUrl}/ro/`,
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: 'Servicii',
          item: `${siteUrl}/ro/#services`,
        },
        {
          '@type': 'ListItem',
          position: 3,
          name: sc.meta.breadcrumbName,
        },
      ],
    },
    // 4. HowTo schema (implementation steps)
    {
      '@type': 'HowTo',
      '@id': `${siteUrl}/ro/servicii/agenti-conversationali/#howto`,
      name: sc.approach.schemaName,
      description: sc.approach.schemaDescription,
      step: sc.approach.steps.map((step: { title: string; description: string }, index: number) => ({
        '@type': 'HowToStep',
        position: index + 1,
        name: step.title,
        text: step.description,
      })),
    },
  ],
};
---

<BaseLayout
  title={title}
  description={description}
  locale={locale}
  canonicalUrl="/ro/servicii/agenti-conversationali/"
  schema={schema}
>
  <ConversationalAgentsPage locale={locale} />
</BaseLayout>
