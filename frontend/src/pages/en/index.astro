---
/**
 * English Homepage - GENERATIVA
 *
 * Strategy "Demo-First + Storytelling"
 * NEW Flow (see docs/STRATEGY.md section 7.4):
 *
 * 1. HeroInteractive - Chat demo in the first 5 seconds
 * 2. BenefitsStrip - Instant visual impact (6 benefits)
 * 3. Services - What we offer
 * 4. UseCases - "Sound familiar?" (self-identification)
 * 5. IntegrationHub - "What happens behind the scenes" (visual)
 * 6. ScaleWithConfidence - Wave animation + business metrics (unified)
 * 7. Process - How it works
 * 8. FAQ - Frequently asked questions
 * 9. CTA - Contact
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import HeroInteractive from '@components/sections/HeroInteractive.astro';
import BenefitsStrip from '@components/sections/BenefitsStrip.astro';
import Services from '@components/sections/Services.astro';
import UseCases from '@components/sections/UseCases.astro';
import IntegrationHub from '@components/sections/IntegrationHub.astro';
import ScaleWithConfidence from '@components/sections/ScaleWithConfidence.astro';
import Process from '@components/sections/Process.astro';
import FAQ from '@components/sections/FAQ.astro';
import CTA from '@components/sections/CTA.astro';
import { getTranslations } from '@i18n/index';

const locale = 'en';
const t = getTranslations(locale);

// Page metadata
const title = `${t.site.name} - ${t.site.tagline}`;
const description = t.site.description;

// Site URL (matches BaseLayout)
const siteUrl = 'https://diginest-ai-platform.vercel.app';

// Combined schema using @graph pattern
const pageSchema = {
  '@context': 'https://schema.org',
  '@graph': [
    // WebSite schema
    {
      '@type': 'WebSite',
      '@id': `${siteUrl}/#website`,
      url: siteUrl,
      name: 'GENERATIVA',
      description: t.site.description,
      inLanguage: ['ro-RO', 'en-US'],
      publisher: {
        '@id': `${siteUrl}/#organization`,
      },
    },
    // WebPage schema
    {
      '@type': 'WebPage',
      '@id': `${siteUrl}/en/#webpage`,
      url: `${siteUrl}/en/`,
      name: title,
      description: description,
      inLanguage: 'en-US',
      isPartOf: {
        '@id': `${siteUrl}/#website`,
      },
      about: {
        '@id': `${siteUrl}/#organization`,
      },
    },
    // BreadcrumbList (homepage = single item)
    {
      '@type': 'BreadcrumbList',
      '@id': `${siteUrl}/en/#breadcrumb`,
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Home',
          item: `${siteUrl}/en/`,
        },
      ],
    },
  ],
};
---

<BaseLayout
  title={title}
  description={description}
  locale={locale}
  canonicalUrl="/en/"
  schema={pageSchema}
>
  <HeroInteractive locale={locale} />
  <BenefitsStrip locale={locale} />
  <Services locale={locale} />
  <UseCases locale={locale} />
  <IntegrationHub locale={locale} />
  <ScaleWithConfidence locale={locale} />
  <Process locale={locale} />
  <FAQ locale={locale} />
  <CTA locale={locale} />
</BaseLayout>
