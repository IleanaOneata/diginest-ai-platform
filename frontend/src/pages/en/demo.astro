---
/**
 * English Demo Request Page
 *
 * SEO optimized demo request page for GENERATIVA
 * Target keywords: AI agent demo, automation demo, free AI consultation
 *
 * Schema.org: WebPage + BreadcrumbList (@graph pattern)
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import DemoForm from '@components/sections/DemoForm.astro';
import { getTranslations } from '@i18n/index';

const locale = 'en';
const t = getTranslations(locale);

const title = t.demo.meta.title;
const description = t.demo.meta.description;

const siteUrl = 'https://generativa.ro';

// Schema.org @graph with WebPage + BreadcrumbList
const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    // WebPage schema
    {
      '@type': 'WebPage',
      '@id': `${siteUrl}/en/demo/#webpage`,
      url: `${siteUrl}/en/demo/`,
      name: title,
      description: description,
      inLanguage: 'en-US',
      isPartOf: {
        '@id': `${siteUrl}/#website`,
      },
      about: {
        '@id': `${siteUrl}/#organization`,
      },
    },
    // BreadcrumbList
    {
      '@type': 'BreadcrumbList',
      '@id': `${siteUrl}/en/demo/#breadcrumb`,
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: t.demo.breadcrumb.home,
          item: `${siteUrl}/en/`,
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: t.demo.breadcrumb.demo,
        },
      ],
    },
  ],
};
---

<BaseLayout
  title={title}
  description={description}
  locale={locale}
  canonicalUrl="/en/demo/"
  schema={schema}
>
  <DemoForm locale={locale} />
</BaseLayout>
